@using eShop.Blazor.Application.Mapping
@using eShop.Blazor.Application.Validation
@using eShop.Blazor.Domain.Interfaces
@using eShop.Blazor.Domain.Models
@inject IUserService UserService
@inject ISecurityService SecurityService
@inject ISnackbar Snackbar
@inject ChangePasswordValidator Validator

<MudDialog Style="width: 600px">
    <TitleContent>
        Change password
    </TitleContent>
    <DialogContent>
        <MudForm 
            @ref="changePasswordForm" 
            Model="Model" 
            Validation="Validator.ValidateValue">
            <MudPasswordField
                @bind-Value="Model.CurrentPassword"
                For="() => Model.CurrentPassword"
                Label="Current password"
                Variant="Variant.Outlined"
                Immediate="true"
                Clearable="true"/>
            <MudPasswordField
                @bind-Value="Model.NewPassword"
                For="() => Model.NewPassword"
                Label="New password"
                Variant="Variant.Outlined"
                Immediate="true"
                Clearable="true"/>
            <MudPasswordField
                @bind-Value="Model.ConfirmNewPassword"
                For="() => Model.ConfirmNewPassword"
                Label="Confirm new password"
                Variant="Variant.Outlined"
                Immediate="true"
                Clearable="true"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton
            Color="Color.Error"
            Variant="Variant.Outlined"
            ButtonType="ButtonType.Button"
            OnClick="@(() => OnCancel())">
            Cancel
        </MudButton>
        <MudButton
            Color="Color.Primary"
            Variant="Variant.Filled"
            ButtonType="ButtonType.Button"
            OnClick="@(async () => await OnSubmitAsync())">
            Submit
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance? Dialog { get; set; }
    [Parameter] public ChangePasswordModel Model { get; set; } = new();

    private MudForm changePasswordForm = new();

    private async Task OnSubmitAsync()
    {
        await changePasswordForm.Validate();

        if (changePasswordForm.IsValid)
        {
            var request = Mapper.Map(Model);
            var result = await SecurityService.ChangePasswordAsync(request);

            if (result.Success)
            {
                Dialog?.Close(DialogResult.Ok(true));
            }
            else
            {
                Snackbar.Add(result.Message, Severity.Error);
            }
        }
    }
    
    private void OnCancel() => Dialog?.Close();
}