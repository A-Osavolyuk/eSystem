@page "/account/email/verify"
@inherits PageBase

@inject ISecurityService SecurityService
@inject IUserService UserService
@inject VerifyEmailValidator Validator

<Title Text="Email verification"></Title>

<MudGrid Justify="Justify.Center" Spacing="1">
    <MudItem xs="4" Style="margin-top: 100px">
        <MudStack Spacing="1" Justify="Justify.Center">
            <MudPaper Outlined Class="pa-3">
                <MudText Align="Align.Center" Typo="Typo.h4">
                    Email verification
                </MudText>
            </MudPaper>
            <MudPaper Outlined Class="pa-3">
                <MudForm
                    @ref="form"
                    Model="Model"
                    Validation="Validator.ValidateValue">
                    <MudStack Spacing="2" Justify="Justify.Center">
                        <MudText Align="Align.Center">
                            We have sent an email with code to email: <strong>@email</strong>
                        </MudText>

                        <MudCodeInput
                            Class="d-flex align-items-center"
                            Variant="Variant.Outlined"
                            Spacing="2"
                            Margin="Margin.None"
                            Count="6"
                            @bind-Value="Model.Code"/>

                        <MudLoadingButton
                            ButtonType="ButtonType.Button"
                            Variant="Variant.Filled"
                            Color="Color.Primary"
                            FullWidth
                            Disabled="@(Model.Code.Length <= 5)"
                            OnClick="@(async () => await OnVerifyEmailAsync())">
                            Verify
                        </MudLoadingButton>
                    </MudStack>
                </MudForm>
            </MudPaper>
            <MudPaper Outlined Class="pa-3">
                <MudText Align="Align.Center">Didn't received an email?
                    <strong @onclick="async () => await SendCodeAsync()" class="cursor-pointer">Resend</strong>
                </MudText>
            </MudPaper>
        </MudStack>
    </MudItem>
</MudGrid>

@code {

    [SupplyParameterFromQuery(Name = "id")]
    private Guid UserId { get; set; }

    [SupplyParameterFromForm] private VerifyEmailModel Model { get; set; } = new();

    private MudForm form = new();
    private string? email;

    protected override async Task OnInitializedAsync()
    {
        var result = await UserService.GetUserPrimaryEmailAsync(UserId);
        if (result.Success)
        {
            var response = result.Get<UserEmailDto>()!;
            email = response.Email;
        }
        else Snackbar.Add(result.Message, Severity.Error);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await SendCodeAsync();
        }
    }

    private async Task OnVerifyEmailAsync()
    {
        await form.Validate();

        if (form.IsValid)
        {
            var request = new VerifyCodeRequest()
            {
                UserId = UserId,
                Resource = CodeResource.Email,
                Type = CodeType.Verify,
                Sender = SenderType.Email,
                Code = Model.Code,
            };

            var result = await SecurityService.VerifyCodeAsync(request);

            if (result.Success) await VerifyAsync();
            else Snackbar.Add(result.Message, Severity.Error);
        }
    }

    private async Task VerifyAsync()
    {
        var request = new VerifyEmailRequest()
        {
            UserId = UserId,
            Email = email!
        };

        var result = await SecurityService.VerifyEmailAsync(request);

        if (result.Success)
        {
            Snackbar.Add(result.Message, Severity.Success);
            RouteManager.Route("/account/login");
        }
        else Snackbar.Add(result.Message, Severity.Error);
    }

    private async Task SendCodeAsync()
    {
        var request = new SendCodeRequest()
        {
            UserId = UserId,
            Resource = CodeResource.Email,
            Type = CodeType.Verify,
            Sender = SenderType.Email,
            Payload = new()
            {
                { "To", email! }
            }
        };

        var response = await SecurityService.SendCodeAsync(request);
        Snackbar.Add(response.Message, response.Success ? Severity.Success : Severity.Error);
    }

}