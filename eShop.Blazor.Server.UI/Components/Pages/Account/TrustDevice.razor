@page "/account/device/trust"
@using eShop.Domain.Responses.Auth
@using eShop.Domain.Requests.Auth
@inherits PageBase

@inject IDeviceService DeviceService
@inject ISecurityService SecurityService
@inject IUserService UserService
@inject IVerificationService VerificationService

<Title Text="Device trust"></Title>

<MudGrid Spacing="1" Justify="Justify.Center">
    <MudItem xs="4">
        <MudStack Spacing="1">
            <MudPaper Outlined="true" Class="pa-3" Style="margin-top: 150px">
                <MudText Align="Align.Center" Typo="Typo.h4">
                    Device trust
                </MudText>
            </MudPaper>
            <MudPaper Outlined="true" Class="pa-3">
                <MudForm @ref="form" Model="Model">
                    <MudStack Spacing="2">
                        <MudText Align="Align.Center">
                            You attempting to sign in with new device.
                            To sign in with this device, please, enter 6-digit code
                            from the letter we have sent code to email: <strong>@email</strong>
                        </MudText>

                        <MudCodeInput
                            Count="6"
                            Margin="Margin.Normal"
                            Spacing="2"
                            Class="d-flex align-items-center"
                            @bind-Value="Model.Code"
                            Variant="Variant.Outlined"/>

                        <MudLoadingButton
                            ButtonType="ButtonType.Button"
                            Variant="Variant.Filled"
                            Color="Color.Primary"
                            Class="mt-3"
                            FullWidth
                            Disabled="@(Model.Code.Length <= 5)"
                            OnClick="@(async () => await OnTrustAsync())">
                            Submit
                        </MudLoadingButton>
                    </MudStack>
                </MudForm>
            </MudPaper>
            <CodeResend Context="context"></CodeResend>
        </MudStack>
    </MudItem>
</MudGrid>

@code {

    [SupplyParameterFromQuery(Name = "device")] public Guid DeviceId { get; set; }
    [SupplyParameterFromQuery(Name = "user")] public Guid UserId { get; set; }
    [SupplyParameterFromForm] public TrustDeviceModel Model { get; set; } = new();

    private MudForm form = new();
    private string? email;
    private MessageContext? context;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var result = await DeviceService.GetAsync(DeviceId);

            if (result.Success)
            {
                Model.Device = result.Get<UserDeviceDto>()!;
                await LoadAsync();
                StateHasChanged();
            }
            else Snackbar.Add(result.Message, Severity.Error);
        }
    }

    private async Task LoadAsync()
    {
        var result = await UserService.GetUserPrimaryEmailAsync(UserId);

        if (result.Success)
        {
            var response = result.Get<UserEmailDto>()!;
            email = response.Email;
            
            context = new MessageContext()
            {
                UserId = UserId,
                Sender = SenderType.Email,
                Resource = CodeResource.Device,
                Type = CodeType.Trust,
                Payload = new()
                {
                    { "To", email! },
                    { "OS", Model.Device.OS! },
                    { "Device", Model.Device.Device! },
                    { "IpAddress", Model.Device.IpAddress! },
                    { "Browser", Model.Device.Browser! },
                }
            };

            await SendCodeAsync();
        }
        if (!result.Success) Snackbar.Add(result.Message, Severity.Error);
    }

    private async Task SendCodeAsync()
    {
        var request = context!.ToSendCodeRequest();
        var result = await VerificationService.SendCodeAsync(request);
        if (!result.Success) Snackbar.Add(result.Message, Severity.Error);
    }

    private async Task OnTrustAsync()
    {
        await form.Validate();

        if (form.IsValid)
        {
            var request = context!.ToVerifyCodeRequest(Model.Code);
            var result = await VerificationService.VerifyCodeAsync(request);

            if (result.Success)
            {
                await TrustAsync();
            }
            
            else Snackbar.Add(result.Message, Severity.Error);
        }
    }

    private async Task TrustAsync()
    {
        var request = new TrustDeviceRequest()
        {
            UserId = UserId,
            DeviceId = DeviceId,
        };

        var result = await DeviceService.TrustAsync(request);

        if (result.Success)
        {
            var response = result.Get<TrustDeviceResponse>()!;

            if (response!.IsTwoFactorEnabled)
            {
                Snackbar.Add("Device successfully trusted", Severity.Success);
                var url = $"/account/2fa/login?id={response.UserId}";
                NavigationManager.NavigateTo(url);
            }
            else
            {
                UserState.UserId = response.UserId;
                await AuthenticationManager.SignInAsync();
                NavigationManager.NavigateTo("/products");
                Snackbar.Add(result.Message, Severity.Success);
            }
        }
        else
        {
            Snackbar.Add(result.Message, Severity.Error);
        }
    }

}