@page "/account/linked-account/disconnect"
@inherits PageBase

@attribute [Authorize]

@inject IOAuthService OAuthService
@inject ISecurityService SecurityService
@inject IVerificationService VerificationService
@inject CodeModelValidator Validator

<Title Text="@($"Disconnect {Provider} linked account")"/>

<MudGrid Justify="Justify.Center" Spacing="1">
    <MudItem xs="6" Style="margin-top: 100px">

        <MudStepperExtended
            @ref="stepper"
            Color="Color.Primary"
            Variant="Variant.Filled"
            HeaderTextView="HeaderTextView.All"
            HeaderBadgeView="HeaderBadgeView.All"
            ShowNextButton="false"
            ShowPreviousButton="false"
            ShowSkipButton="false">
            <MudStepExtended Order="1" Icon="@Icons.Material.Filled.Info" Title="Information">
                <ChildContent>
                    <MudGrid Justify="Justify.Center">
                        <MudItem xs="8">
                            <MudStack Spacing="1">
                                <MudPaper Outlined="true" Class="pa-3">
                                    <MudText Typo="Typo.h4" Align="Align.Center">
                                        Disconnect @Provider linked account
                                    </MudText>
                                </MudPaper>
                                <MudPaper Outlined="true" Class="pa-3">
                                    <MudStack Spacing="4">
                                        <MudText Align="Align.Center">
                                            To disconnect your account from @Provider linked account,
                                            you will need to enter 6-digit code
                                            from an email we will send you to: <strong>@UserState.Credentials!.PrimaryEmail</strong>.
                                        </MudText>
                                        <MudButton
                                            Color="Color.Primary"
                                            Variant="Variant.Filled"
                                            ButtonType="ButtonType.Button"
                                            OnClick="@(async () => await OnSendCodeAsync())">
                                            Continue
                                        </MudButton>
                                    </MudStack>
                                </MudPaper>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </ChildContent>
            </MudStepExtended>
            <MudStepExtended Icon="@Icons.Material.Filled.Check" Title="Code verification" Order="2">
                <ChildContent>
                    <MudGrid Justify="Justify.Center">
                        <MudItem xs="8">
                            <MudStack Spacing="1" Justify="Justify.Center">
                                <MudPaper Outlined Class="pa-3">
                                    <MudText Align="Align.Center" Typo="Typo.h4">
                                        Disconnect confirmation
                                    </MudText>
                                </MudPaper>
                                <MudPaper Outlined Class="pa-3">
                                    <MudForm
                                        Validation="Validator.ValidateValue"
                                        @ref="form"
                                        Model="Model">
                                        <MudStack Spacing="4" Justify="Justify.Center">
                                            <MudText Align="Align.Center">
                                                We have sent an email with code to email:
                                                <strong>@UserState.Credentials!.PrimaryEmail</strong>
                                            </MudText>

                                            <MudCodeInput
                                                Class="d-flex align-items-center"
                                                Variant="Variant.Outlined"
                                                Spacing="2"
                                                Margin="Margin.None"
                                                Count="6"
                                                @bind-Value="Model.Code"/>

                                            <MudLoadingButton
                                                ButtonType="ButtonType.Button"
                                                Variant="Variant.Filled"
                                                Color="Color.Primary"
                                                FullWidth
                                                Disabled="@(Model.Code.Length <= 5)"
                                                OnClick="@(async () => await OnVerifyCodeAsync())">
                                                Submit
                                            </MudLoadingButton>
                                        </MudStack>
                                    </MudForm>
                                </MudPaper>
                                <CodeResend Context="context"></CodeResend>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </ChildContent>
            </MudStepExtended>
        </MudStepperExtended>
    </MudItem>
</MudGrid>

@code {

    [SupplyParameterFromQuery(Name = "provider")]
    public string Provider { get; set; } = string.Empty;

    [SupplyParameterFromForm] public CodeModel Model { get; set; } = new();

    private MudStepperExtended stepper = new();
    private MudForm form = new();
    private MessageContext context = new();
    
    protected override void OnInitialized()
    {
        context = new MessageContext()
        {
            UserId = UserState.UserId,
            Type = CodeType.Disconnect,
            Resource = CodeResource.LinkedAccount,
            Sender = SenderType.Email,
            Payload = new Dictionary<string, string>()
            {
                { "To", UserState.Credentials?.PrimaryEmail! },
                { "Provider", Provider }
            }
        };
    }

    private async Task OnSendCodeAsync()
    {
        var request = context!.ToSendCodeRequest();
        var result = await VerificationService.SendCodeAsync(request);

        if (result.Success)
        {
            await stepper.StepNextAsync();
        }
        else Snackbar.Add(result.Message, Severity.Error);
    }

    private async Task OnVerifyCodeAsync()
    {
        var request = context!.ToVerifyCodeRequest(Model.Code);
        var result = await VerificationService.VerifyCodeAsync(request);

        if (result.Success) await VerifyAsync();
        else Snackbar.Add(result.Message, Severity.Error);
    }

    private async Task VerifyAsync()
    {
        var request = new DisconnectLinkedAccountRequest()
        {
            Provider = Provider,
            UserId = UserState.UserId,
        };

        var result = await OAuthService.DisconnectAsync(request);

        if (result.Success)
        {
            NavigationManager.NavigateTo("/account/security");
        }
        else
        {
            Snackbar.Add(result.Message, Severity.Error);
        }
    }

}