@page "/account/device/verify"
@inherits PageBase

@attribute [Authorize]

@inject IDeviceService DeviceService
@inject ISecurityService SecurityService

<Title Text="Verify device"/>

<MudGrid Justify="Justify.Center" Spacing="1">
    <MudItem xs="6" Style="margin-top: 100px">

        <MudStepperExtended
            @ref="stepper"
            Color="Color.Primary"
            Variant="Variant.Filled"
            HeaderTextView="HeaderTextView.All"
            HeaderBadgeView="HeaderBadgeView.All"
            ShowNextButton="false"
            ShowPreviousButton="false"
            ShowSkipButton="false">
            <MudStepExtended Order="1" Icon="@Icons.Material.Filled.Info" Title="Information">
                <ChildContent>
                    <MudGrid Justify="Justify.Center">
                        <MudItem xs="8">
                            <MudStack Spacing="1">
                                <MudPaper Outlined="true" Class="pa-3">
                                    <MudText Typo="Typo.h4" Align="Align.Center">
                                        Device verification
                                    </MudText>
                                </MudPaper>
                                <MudPaper Outlined="true" Class="pa-3">
                                    <MudStack Spacing="4">
                                        <MudText Align="Align.Center">
                                            To verify this device, you will need to enter 6-digit code
                                            from an email we will send you to: <strong>@UserState.Credentials?.PrimaryEmail</strong>.
                                            If you verify this device, you will be able to sign in.
                                        </MudText>
                                        <MudButton
                                            Color="Color.Primary"
                                            Variant="Variant.Filled"
                                            ButtonType="ButtonType.Button"
                                            OnClick="@(async () => await OnSendAsync())">
                                            Continue
                                        </MudButton>
                                    </MudStack>
                                </MudPaper>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </ChildContent>
            </MudStepExtended>
            <MudStepExtended Icon="@Icons.Material.Filled.Check" Title="Code verification" Order="2">
                <ChildContent>
                    <MudGrid Justify="Justify.Center">
                        <MudItem xs="8">
                            <MudStack Spacing="1" Justify="Justify.Center">
                                <MudPaper Outlined Class="pa-3">
                                    <MudText Align="Align.Center" Typo="Typo.h4">
                                        Device verification
                                    </MudText>
                                </MudPaper>
                                <MudPaper Outlined Class="pa-3">
                                    <MudForm
                                        @ref="form"
                                        Model="Model">
                                        <MudStack Spacing="4" Justify="Justify.Center">
                                            <MudText Align="Align.Center">
                                                We have sent an email with code to email: <strong>@UserState.Credentials?.PrimaryEmail</strong>
                                            </MudText>

                                            <MudCodeInput
                                                Class="d-flex align-items-center"
                                                Variant="Variant.Outlined"
                                                Spacing="2"
                                                Margin="Margin.None"
                                                Count="6"
                                                @bind-Value="Model.Code"/>

                                            <MudLoadingButton
                                                ButtonType="ButtonType.Button"
                                                Variant="Variant.Filled"
                                                Color="Color.Primary"
                                                FullWidth
                                                Disabled="@(Model.Code.Length <= 5)"
                                                OnClick="@(async () => await OnVerifyAsync())">
                                                Submit
                                            </MudLoadingButton>
                                        </MudStack>
                                    </MudForm>
                                </MudPaper>
                                <CodeResend Context="context"></CodeResend>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </ChildContent>
            </MudStepExtended>
        </MudStepperExtended>
    </MudItem>
</MudGrid>

@code {

    [SupplyParameterFromQuery(Name = "device")]
    public Guid DeviceId { get; set; }

    [SupplyParameterFromForm] public VerifyDeviceModel Model { get; set; } = new();

    private MudStepperExtended stepper = new();
    private MudForm form = new();
    private MessageContext? context;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var result = await DeviceService.GetAsync(DeviceId);

            if (result.Success)
            {
                Model.Device = result.Get<UserDeviceDto>()!;
            }
            else
            {
                Snackbar.Add(result.Message, Severity.Error);
            }
            
            context = new MessageContext()
            {
                UserId = UserState.UserId,
                Sender = SenderType.Email,
                Resource = CodeResource.Device,
                Type = CodeType.Verify,
                Payload = new()
                {
                    { "To", UserState.Credentials?.PrimaryEmail! },
                    { "OS", Model.Device.OS! },
                    { "Device", Model.Device.Device! },
                    { "IpAddress", Model.Device.IpAddress! },
                    { "Browser", Model.Device.Browser! },
                }
            };
        }
    }

    private async Task OnSendAsync()
    {
        var request = context!.ToSendCodeRequest();
        var result = await SecurityService.SendCodeAsync(request);
        if (result.Success)
        {
            var index = stepper!.GetActiveIndex();
            await stepper!.CompleteStep(index);
        }
        else Snackbar.Add(result.Message, Severity.Error);
    }

    private async Task OnVerifyAsync()
    {
        var request = context!.ToVerifyCodeRequest(Model.Code);
        var result = await SecurityService.VerifyCodeAsync(request);

        if (result.Success) await VerifyAsync();
        else Snackbar.Add(result.Message, Severity.Error);
    }

    private async Task VerifyAsync()
    {
        var request = new VerifyDeviceRequest()
        {
            DeviceId = DeviceId,
            UserId = UserState.UserId
        };

        var result = await DeviceService.VerifyAsync(request);

        if (result.Success) RouteManager.Route("/account/devices");
        else Snackbar.Add(result.Message, Severity.Error);
    }

}