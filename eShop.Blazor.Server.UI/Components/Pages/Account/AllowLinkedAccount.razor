@page "/account/linked-account/allow"
@using eShop.Blazor.Server.Application.Validation
@using eShop.Blazor.Server.Domain.Interfaces
@using eShop.Blazor.Server.Domain.Models
@inherits PageBase

@attribute [Authorize]

@inject IOAuthService OAuthService
@inject ISecurityService SecurityService
@inject CodeModelValidator Validator

<Title Text="@($"Allow {Provider} linked account")"/>

<MudGrid Justify="Justify.Center" Spacing="1">
    <MudItem xs="6" Style="margin-top: 100px">

        <MudStepperExtended 
            @ref="stepper" 
            Color="Color.Primary" 
            Variant="Variant.Filled"
            HeaderTextView="HeaderTextView.All" 
            HeaderBadgeView="HeaderBadgeView.All"
            ShowNextButton="false" 
            ShowPreviousButton="false" 
            ShowSkipButton="false">
            <MudStepExtended Order="1" Icon="@Icons.Material.Filled.Info" Title="Information">
                <ChildContent>
                    <MudGrid Justify="Justify.Center">
                        <MudItem xs="8">
                            <MudStack Spacing="1">
                                <MudPaper Outlined="true" Class="pa-3">
                                    <MudText Typo="Typo.h4" Align="Align.Center">
                                        Allow @Provider linked account
                                    </MudText>
                                </MudPaper>
                                <MudPaper Outlined="true" Class="pa-3">
                                    <MudStack Spacing="4">
                                        <MudText Align="Align.Center">
                                            To allow sign in with @Provider linked account, 
                                            you will need to enter 6-digit code
                                            from an email we will send you to: <strong>@UserState.Credentials!.Email</strong>.
                                        </MudText>
                                        <MudButton
                                            Color="Color.Primary"
                                            Variant="Variant.Filled"
                                            ButtonType="ButtonType.Button"
                                            OnClick="@(async () => await OnSendCodeAsync())">
                                            Continue
                                        </MudButton>
                                    </MudStack>
                                </MudPaper>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </ChildContent>
            </MudStepExtended>
            <MudStepExtended Icon="@Icons.Material.Filled.Check" Title="Code verification" Order="2">
                <ChildContent>
                    <MudGrid Justify="Justify.Center">
                        <MudItem xs="8">
                            <MudStack Spacing="1" Justify="Justify.Center">
                                <MudPaper Outlined Class="pa-3">
                                    <MudText Align="Align.Center" Typo="Typo.h4">
                                        Allow confirmation
                                    </MudText>
                                </MudPaper>
                                <MudPaper Outlined Class="pa-3">
                                    <MudForm
                                        @ref="form"
                                        Model="Model"
                                        Validation="Validator.ValidateValue">
                                        <MudStack Spacing="4" Justify="Justify.Center">
                                            <MudText Align="Align.Center">
                                                We have sent an email with code to email: <strong>@UserState.Credentials!.Email</strong>
                                            </MudText>

                                            <MudCodeInput
                                                Class="d-flex align-items-center"
                                                Variant="Variant.Outlined"
                                                Spacing="2"
                                                Margin="Margin.None"
                                                Count="6"
                                                @bind-Value="Model.Code"/>
                        
                                            <MudLoadingButton
                                                ButtonType="ButtonType.Button"
                                                Variant="Variant.Filled"
                                                Color="Color.Primary"
                                                FullWidth
                                                Disabled="@(Model.Code.Length <= 5)"
                                                OnClick="@(async () => await OnVerifyCodeAsync())">
                                                Submit
                                            </MudLoadingButton>
                                        </MudStack>
                                    </MudForm>
                                </MudPaper>
                                <MudPaper Outlined Class="pa-3">
                                    <MudText Align="Align.Center">Didn't received an email?
                                        <strong @onclick="async () => await SendCodeAsync()"
                                                class="cursor-pointer">Resend</strong>
                                    </MudText>
                                </MudPaper>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </ChildContent>
            </MudStepExtended>
        </MudStepperExtended>
    </MudItem>
</MudGrid>

@code {
    [SupplyParameterFromQuery(Name = "provider")] public string Provider { get; set; } = string.Empty;
    [SupplyParameterFromForm] public CodeModel Model { get; set; } = new();

    private MudStepperExtended stepper = new();
    private MudForm form = new();

    private async Task SendCodeAsync()
    {
        var request = new SendCodeRequest()
        {
            UserId = UserState.UserId,
            Type = CodeType.Allow,
            Resource = CodeResource.LinkedAccount,
            Sender = SenderType.Email,
            Payload = new Dictionary<string, string>()
            {
                { "Provider", Provider },
                { "Email", UserState.Credentials?.Email! }
            }
        };

        var result = await SecurityService.SendCodeAsync(request);
        if (!result.Success) Snackbar.Add(result.Message, Severity.Error);
    }

    private async Task OnSendCodeAsync()
    {
        var request = new SendCodeRequest()
        {
            UserId = UserState.UserId,
            Type = CodeType.Allow,
            Resource = CodeResource.LinkedAccount,
            Sender = SenderType.Email,
            Payload = new Dictionary<string, string>()
            {
                { "Provider", Provider },
                { "Email", UserState.Credentials?.Email! }
            }
        };

        var result = await SecurityService.SendCodeAsync(request);

        if (result.Success)
        {
            var index = stepper!.GetActiveIndex();
            await stepper!.CompleteStep(index);
        }
        else Snackbar.Add(result.Message, Severity.Error);
    }

    private async Task OnVerifyCodeAsync()
    {
        var request = new VerifyCodeRequest()
        {
            UserId = UserState.UserId,
            Type = CodeType.Allow,
            Resource = CodeResource.LinkedAccount,
            Sender = SenderType.Email,
            Code = Model.Code
        };
        
        var result = await SecurityService.VerifyCodeAsync(request);
        
        if (result.Success) await VerifyAsync();
        else Snackbar.Add(result.Message, Severity.Error);
    }

    private async Task VerifyAsync()
    {
        var request = new AllowLinkedAccountRequest()
        {
            Provider = Provider,
            UserId = UserState.UserId,
        };

        var result = await OAuthService.AllowAsync(request);
        
        if (result.Success)
        {
            RouteManager.Route("/account/security");
        }
        else
        {
            Snackbar.Add(result.Message, Severity.Error);
        }
    }
}