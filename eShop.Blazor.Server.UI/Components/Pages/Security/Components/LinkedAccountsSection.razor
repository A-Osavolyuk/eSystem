<MudStack Spacing="0" Class="px-3">
    <MudStack Row="true" Spacing="0">
        <MudText Typo="Typo.h6" Class="pt-1">Linked accounts</MudText>
        @if (Model.HasLinkedAccounts)
        {
            <MudChip 
                T="string"
                Class="mt-2"
                Color="Color.Success"
                Variant="Variant.Outlined"
                Size="Size.Small">
                Enabled
            </MudChip>
        }
        else
        {
            <MudChip 
                T="string"
                Class="mt-2"
                Color="Color.Error"
                Variant="Variant.Outlined"
                Size="Size.Small">
                Disabled
            </MudChip>
        }
        <MudSpacer/>
        @if (Model.HasLinkedAccounts)
        {
            <MudMenu
                Dense="true">
                <ActivatorContent>
                    <MudIcon Icon="@Icons.Material.Filled.MoreHoriz"/>
                </ActivatorContent>
                <ChildContent>
                        <MudMenuItem Href="/account/oauth/manage">
                            <MudTextM3 Typo="TypoM3.Body" Size="Size.Medium">
                                Manage accounts
                            </MudTextM3>
                        </MudMenuItem>
                    <MudDivider/>
                </ChildContent>
            </MudMenu>
        }
    </MudStack>
    <MudText Class="opacity-50" Typo="Typo.caption">
        Additional sign-in method. 
        You can use this method to avoid password sign-in.
    </MudText>
</MudStack>

@code {
    [Parameter] public LinkedAccountsData Model { get; set; } = new();
}