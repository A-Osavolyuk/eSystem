<MudStack Spacing="0" Class="px-3">
    <MudStack Row="true" Spacing="0">
        <MudText Typo="Typo.h6" Class="pt-1">Linked accounts</MudText>
        @if (Model.Enabled)
        {
            <MudChip 
                T="string"
                Class="mt-2"
                Color="Color.Success"
                Variant="Variant.Outlined"
                Size="Size.Small">
                Enabled
            </MudChip>
        }
        else
        {
            <MudChip 
                T="string"
                Class="mt-2"
                Color="Color.Error"
                Variant="Variant.Outlined"
                Size="Size.Small">
                Disabled
            </MudChip>
        }
        <MudSpacer/>
        @if (Model.HasLinkedAccounts)
        {
            <MudMenu
                Dense="true">
                <ActivatorContent>
                    <MudIcon Icon="@Icons.Material.Filled.MoreHoriz"/>
                </ActivatorContent>
                <ChildContent>
                    @if (!Model.Enabled)
                    {
                        <MudMenuItem
                            Href=@($"/account/login/enable?type={LoginTypes.OAuth}")
                            Class="mud-error-text">
                            Disable method
                        </MudMenuItem>
                    }
                    <MudDivider/>
                    @if (Model.Enabled)
                    {
                        <MudMenuItem
                            Href=@($"/account/login/disable?type={LoginTypes.OAuth}")
                            Class="mud-error-text">
                            Disable method
                        </MudMenuItem>
                    }
                </ChildContent>
            </MudMenu>
        }
    </MudStack>
    <MudText Class="opacity-50" Typo="Typo.caption">
        Additional sign-in method. 
        You can use this method to avoid password sign-in.
    </MudText>
</MudStack>

@code {
    [Parameter] public LinkedAccountsData Model { get; set; } = new();
}