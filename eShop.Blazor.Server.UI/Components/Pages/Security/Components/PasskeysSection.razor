<MudStack Spacing="0" Class="px-3">
    <MudStack Row="true" Spacing="0">
        <MudText Typo="Typo.h6">Passkeys</MudText>
        @if (Model.Enabled)
        {
            <MudChip 
                T="string"
                Color="Color.Success"
                Variant="Variant.Outlined"
                Size="Size.Small">
                Enabled
            </MudChip>
        }
        else
        {
            <MudChip 
                T="string"
                Color="Color.Error"
                Variant="Variant.Outlined"
                Size="Size.Small">
                Disabled
            </MudChip>
        }
        <MudSpacer/>
        <MudMenu
            Dense="true">
            <ActivatorContent>
                <MudIcon Icon="@Icons.Material.Filled.MoreHoriz"/>
            </ActivatorContent>
            <ChildContent>
                <MudMenuItem Href="/account/passkeys/add">
                    Add passkey
                </MudMenuItem>
                @if (!Model.Enabled)
                {
                    <MudMenuItem Href=@($"/account/login/enable?type={LoginTypes.Passkey}")>
                        Enable method
                    </MudMenuItem>
                }
                @if (Model.Enabled)
                {
                    <MudDivider/>
                    <MudMenuItem
                        Href=@($"/account/login/disable?type={LoginTypes.Passkey}")
                        Class="mud-error-text">
                        Disable method
                    </MudMenuItem>
                }
            </ChildContent>
        </MudMenu>
    </MudStack>
    <MudText Class="opacity-50" Typo="Typo.caption">
        Additional sign-in method. 
        Works by key-per-device principal. 
        You can use this method instead of password one.
    </MudText>
</MudStack>

@code {
    [Parameter] public PasskeysData Model { get; set; } = new();
}