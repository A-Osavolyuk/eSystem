@if (Model.OAuthProviders.Count > 0)
{
    <MudPaper Outlined="true" Class="pt-3 pl-5 pr-5 pb-5">
        <MudStack Spacing="3">
            <MudText Typo="Typo.h6">
                Linked accounts
            </MudText>
            <MudStack Spacing="2">
                @foreach (var provider in Model.OAuthProviders)
                {
                    <MudStack Spacing="0">
                        <MudStack Row="true" Spacing="1">
                            <MudText Style="padding-top: 5px"> @provider.Name</MudText>
                            @if (provider.IsAllowed)
                            {
                                <MudChip
                                    T="string"
                                    Size="Size.Small"
                                    Variant="Variant.Outlined"
                                    Color="Color.Success">
                                    Allowed
                                </MudChip>
                                <MudSpacer/>
                                <MudTooltip Text="Disallow">
                                    <MudIconButton
                                        Color="Color.Error"
                                        Icon="@Icons.Material.Filled.Close"
                                        Variant="Variant.Outlined"
                                        ButtonType="ButtonType.Button"
                                        OnClick="@(async () => await OnDisallow.InvokeAsync(provider.Id))"/>
                                </MudTooltip>
                                <MudTooltip Text="Disconnect">
                                    <MudIconButton
                                        Color="Color.Warning"
                                        Icon="@Icons.Material.Filled.Delete"
                                        Variant="Variant.Outlined"
                                        ButtonType="ButtonType.Button"
                                        OnClick="@(async () => await OnDisconnect.InvokeAsync(provider.Id))"/>
                                </MudTooltip>
                            }
                            else
                            {
                                <MudChip
                                    T="string"
                                    Size="Size.Small"
                                    Variant="Variant.Outlined"
                                    Color="Color.Error">
                                    Disallowed
                                </MudChip>
                                <MudSpacer/>
                                <MudTooltip Text="Allow">
                                    <MudIconButton
                                        Color="Color.Success"
                                        Icon="@Icons.Material.Filled.Check"
                                        Variant="Variant.Outlined"
                                        ButtonType="ButtonType.Button"
                                        OnClick="@(async () => await OnAllow.InvokeAsync(provider.Id))"/>
                                </MudTooltip>
                                <MudTooltip Text="Disconnect">
                                    <MudIconButton
                                        Color="Color.Warning"
                                        Icon="@Icons.Material.Filled.Delete"
                                        Variant="Variant.Outlined"
                                        ButtonType="ButtonType.Button"
                                        OnClick="@(async () => await OnDisconnect.InvokeAsync(provider.Id))"/>
                                </MudTooltip>
                            }
                        </MudStack>
                        @if (provider.IsAllowed)
                        {
                            <MudText
                                Class="opacity-50"
                                Typo="Typo.caption">
                                Linked at: @provider.LinkedDate?.ToString("MM/dd/yyyy HH:mm")
                            </MudText>
                        }
                        else
                        {
                            <MudText
                                Class="opacity-50"
                                Typo="Typo.caption">
                                Disallowed at: @provider.LinkedDate?.ToString("MM/dd/yyyy HH:mm")
                            </MudText>
                        }
                    </MudStack>
                }
            </MudStack>
        </MudStack>
    </MudPaper>
}

@code {
    [Parameter] public UserSecurityModel Model { get; set; } = new();
    [Parameter] public EventCallback<Guid> OnAllow { get; set; }
    [Parameter] public EventCallback<Guid> OnDisallow { get; set; }
    [Parameter] public EventCallback<Guid> OnDisconnect { get; set; }
}