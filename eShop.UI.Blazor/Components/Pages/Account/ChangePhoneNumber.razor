@page "/account/phone-number/change"

@using Size = MudBlazor.Size
@inherits PageBase

@inject ISecurityService SecurityService
@inject AuthenticationManager AuthenticationManager
@inject ChangePhoneNumberValidator ChangePhoneNumberValidator
@inject ConfirmChangePhoneNumberValidator ConfirmChangePhoneNumberValidator

<Title Text="Change phone number"></Title>

<MudGrid Justify="Justify.Center">
    <MudItem xs="6" Style="margin-top:150px">
        <MudStepperExtended @ref="stepper" Color="Color.Primary" Variant="Variant.Filled"
                            HeaderTextView="HeaderTextView.All" HeaderBadgeView="HeaderBadgeView.All"
                            ShowNextButton="false" ShowPreviousButton="false" ShowSkipButton="false">
            <ChildContent>
                <MudStepExtended Order="0" Icon="@Icons.Material.Filled.Start" Title="Request">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudStack Spacing="1">
                                    <MudPaper Outlined Class="pa-3 mb-1">
                                        <MudText Align="Align.Center" Typo="Typo.h4">
                                            Phone number change
                                        </MudText>
                                    </MudPaper>
                                    <MudPaper Outlined="true" Class="pa-5">
                                        <MudForm
                                            @ref="changePhoneNumberForm"
                                            Validation="ChangePhoneNumberValidator.ValidateValue"
                                            Model="ChangePhoneNumberModel">
                                            <MudGrid Justify="Justify.Center">
                                                <MudItem xs="12">
                                                    <MudText Class="mb-1" Align="Align.Center">
                                                        To change phone number, you should enter new phone number.
                                                        Please, enter new phone number.
                                                    </MudText>
                                                </MudItem>
                                                <MudItem xs="12">
                                                    <MudTextField
                                                        @bind-Value="ChangePhoneNumberModel.NewPhoneNumber"
                                                        For="() => ChangePhoneNumberModel.NewPhoneNumber"
                                                        Label="New phone number"
                                                        Variant="Variant.Outlined"
                                                        Immediate="true"
                                                        Clearable="true"/>
                                                </MudItem>
                                                <MudItem xs="12">
                                                    <MudLoadingButton
                                                        FullWidth="true"
                                                        Variant="Variant.Filled"
                                                        Color="Color.Primary"
                                                        ButtonType="ButtonType.Button"
                                                        OnClick="@(async () => await OnChangePhoneNumberAsync())">
                                                        Change
                                                    </MudLoadingButton>
                                                </MudItem>
                                            </MudGrid>
                                        </MudForm>
                                    </MudPaper>
                                </MudStack>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Order="1" Icon="@Icons.Material.Filled.Check" Title="Confirmation">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudStack Spacing="1">
                                    <MudPaper Outlined Class="pa-3">
                                        <MudText Align="Align.Center" Typo="Typo.h4">
                                            Code confirmation
                                        </MudText>
                                    </MudPaper>
                                    <MudPaper Outlined="true" Class="pa-5">
                                        <MudForm Model="ConfirmChangePhoneNumberModel">
                                            <MudGrid Justify="Justify.Center">
                                                <MudItem xs="12">
                                                    <MudText Class="mb-2" Align="Align.Center">
                                                        Enter code from SMS we sent to your current phone number
                                                    </MudText>
                                                </MudItem>
                                                <MudItem xs="7">
                                                    <MudCodeInput
                                                        Count="6"
                                                        Margin="Margin.Normal" Spacing="1"
                                                        @bind-Value="ConfirmChangePhoneNumberModel.CurrentPhoneNumberCode"
                                                        Variant="Variant.Outlined"/>
                                                </MudItem>
                                                <MudItem xs="12">
                                                    <MudLoadingButton
                                                        FullWidth="true"
                                                        Variant="Variant.Filled"
                                                        Color="Color.Primary"
                                                        ButtonType="ButtonType.Button"
                                                        OnClick="@(async () => await StepNextAsync())">
                                                        Confirm
                                                    </MudLoadingButton>
                                                </MudItem>
                                            </MudGrid>
                                        </MudForm>
                                    </MudPaper>
                                    <MudPaper Outlined Class="pa-3">
                                        <MudText Align="Align.Center">Didn't received a SMS?
                                            <strong
                                                @onclick="async () => await ResendCurrentPhoneNumberCodeAsync()"
                                                class="cursor-pointer">
                                                Resend
                                            </strong>
                                        </MudText>
                                    </MudPaper>
                                    <MudPaper Outlined Class="pa-3">
                                        <MudText Align="Align.Center">
                                            Loose access to your current phone number?
                                            <MudLink Href="account/phone-number/reset">
                                                Reset it
                                            </MudLink>
                                        </MudText>
                                    </MudPaper>
                                </MudStack>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Order="2" Icon="@Icons.Material.Filled.Check" Title="Verification">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudStack Spacing="1">
                                    <MudPaper Outlined Class="pa-3">
                                        <MudText Align="Align.Center" Typo="Typo.h4">
                                            Phone number verification
                                        </MudText>
                                    </MudPaper>
                                    <MudPaper Outlined="true" Class="pa-5">
                                        <MudForm
                                            @ref="confirmChangePhoneNumberForm"
                                            Model="ConfirmChangePhoneNumberModel"
                                            Validation="ConfirmChangePhoneNumberValidator.ValidateValue">
                                            <MudGrid Justify="Justify.Center">
                                                <MudItem xs="12">
                                                    <MudText Class="mb-2" Align="Align.Center">
                                                        Enter code from SMS we sent you
                                                        to: @ChangePhoneNumberModel.NewPhoneNumber
                                                    </MudText>
                                                </MudItem>
                                                <MudItem xs="7">
                                                    <MudCodeInput
                                                        Count="6"
                                                        Margin="Margin.Normal" Spacing="1"
                                                        @bind-Value="ConfirmChangePhoneNumberModel.NewPhoneNumberCode"
                                                        Variant="Variant.Outlined"/>
                                                </MudItem>
                                                <MudItem xs="12">
                                                    <MudLoadingButton
                                                        FullWidth="true"
                                                        Variant="Variant.Filled"
                                                        Color="Color.Primary"
                                                        ButtonType="ButtonType.Button"
                                                        OnClick="@(async () => await OnConfirmChangePhoneNumberAsync())">
                                                        Verify
                                                    </MudLoadingButton>
                                                </MudItem>
                                            </MudGrid>
                                        </MudForm>
                                    </MudPaper>
                                    <MudPaper Outlined Class="pa-3">
                                        <MudText Align="Align.Center">Didn't received a SMS?
                                            <strong
                                                @onclick="async () => await ResendNewPhoneNumberCodeAsync()"
                                                class="cursor-pointer">
                                                Resend
                                            </strong>
                                        </MudText>
                                    </MudPaper>
                                </MudStack>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Icon="@Icons.Material.Filled.Alarm" Title="Email changed" IsResultStep="true">
                    <ChildContent>
                        <div class="d-flex flex-column align-center justify-center" style="height: 200px">
                            <MudIconButton Icon="@Icons.Material.Filled.DoneAll" Size="Size.Large"
                                           Variant="Variant.Filled" Color="Color.Success"/>
                            <MudText Style="width: 55ch; margin: auto">
                                Your phone number was successfully changed.
                                You will be redirected to profile page in 5seconds.
                            </MudText>
                        </div>
                    </ChildContent>
                </MudStepExtended>
            </ChildContent>
        </MudStepperExtended>
    </MudItem>
</MudGrid>

@code {
    [SupplyParameterFromForm] private ChangePhoneNumberModel ChangePhoneNumberModel { get; set; } = new();
    [SupplyParameterFromForm] private ConfirmChangePhoneNumberModel ConfirmChangePhoneNumberModel { get; set; } = new();

    private MudStepperExtended stepper = new();
    private MudForm changePhoneNumberForm = new();
    private MudForm confirmChangePhoneNumberForm = new();
    private Guid userId;
    private bool completed = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            userId = await LocalStorage.GetAsync<Guid>("userId");
        }

        if (completed)
        {
            await OnCompleteAsync();
        }
    }

    private async Task ResendCurrentPhoneNumberCodeAsync()
    {
        var request = new ResendCodeRequest()
        {
            UserId = userId,
            CodeResource = CodeResource.PhoneNumber,
            CodeType = CodeType.Current,
            Sender = SenderType.Sms
        };

        var response = await SecurityService.ResendCodeAsync(request);

        if (response.Success)
        {
            Snackbar.Add(response.Message, Severity.Success);
        }
        else
        {
            Snackbar.Add(response.Message, Severity.Error);
        }
    }

    private async Task ResendNewPhoneNumberCodeAsync()
    {
        var request = new ResendCodeRequest()
        {
            UserId = userId,
            CodeResource = CodeResource.PhoneNumber,
            CodeType = CodeType.New,
            Sender = SenderType.Sms
        };

        var response = await SecurityService.ResendCodeAsync(request);

        if (response.Success)
        {
            Snackbar.Add(response.Message, Severity.Success);
        }
        else
        {
            Snackbar.Add(response.Message, Severity.Error);
        }
    }

    private async Task OnChangePhoneNumberAsync()
    {
        await changePhoneNumberForm.Validate();

        if (changePhoneNumberForm.IsValid)
        {
            var request = new ChangePhoneNumberRequest()
            {
                UserId = userId,
                NewPhoneNumber = ChangePhoneNumberModel.NewPhoneNumber
            };

            var result = await SecurityService.ChangePhoneNumberAsync(request);

            if (result.Success)
            {
                Snackbar.Add("Codes were sent", Severity.Success);
                await StepNextAsync();
            }
            else
            {
                Snackbar.Add(result.Message, Severity.Error);
            }
        }
    }

    private async Task OnConfirmChangePhoneNumberAsync()
    {
        await confirmChangePhoneNumberForm.Validate();

        if (confirmChangePhoneNumberForm.IsValid)
        {
            var request = new ConfirmChangePhoneNumberRequest()
            {
                UserId = userId,
                NewPhoneNumber = ChangePhoneNumberModel.NewPhoneNumber,
                CurrentPhoneNumberCode = ConfirmChangePhoneNumberModel.CurrentPhoneNumberCode,
                NewPhoneNumberCode = ConfirmChangePhoneNumberModel.NewPhoneNumberCode,
            };

            var result = await SecurityService.ConfirmChangePhoneNumberAsync(request);

            if (result.Success)
            {
                var response = result.Get<ConfirmChangePhoneNumberResponse>()!;
                await StepNextAsync();

                Snackbar.Add("Phone number was successfully changed", Severity.Success);
                await AuthenticationManager.ReauthenticateAsync(response.AccessToken, response.RefreshToken);
                NavigationManager.NavigateTo("/profile");
            }
            else
            {
                Snackbar.Add(result.Message, Severity.Error);
            }
        }
    }

    private async Task StepNextAsync()
    {
        var index = stepper!.GetActiveIndex();
        await stepper!.CompleteStep(index);

        if (stepper.IsAllStepsCompleted())
        {
            completed = true;
            StateHasChanged();
        }
    }

    private async Task OnCompleteAsync()
    {
        await Task.Delay(TimeSpan.FromMicroseconds(5));
        NavigationManager.NavigateTo("account/login");
    }

}