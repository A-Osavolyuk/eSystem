@page "/account/2fa/login"

@inherits PageBase

@inject ITwoFactorService TwoFactorService
@inject IUserService UserService
@inject TwoFactorLoginValidator TwoFactorLoginValidator

<Title Text="Login with 2FA"/>

<MudGrid Justify="Justify.Center" Spacing="1">
    <MudItem xs="6" Style="margin-top: 100px">

        <MudStepperExtended @ref="stepper" Color="Color.Primary" Variant="Variant.Filled"
                            HeaderTextView="HeaderTextView.All" HeaderBadgeView="HeaderBadgeView.All"
                            ShowNextButton="false" ShowPreviousButton="false" ShowSkipButton="false">
            <MudStepExtended Order="1" Icon="@Icons.Material.Filled.Info" Title="Send code">
                <ChildContent>
                    <MudGrid Spacing="1" Justify="Justify.Center">
                        <MudItem xs="8">
                            <MudStack Spacing="1" Justify="Justify.Center">
                                <MudPaper Outlined Class="pa-3">
                                    <MudText Align="Align.Center" Typo="Typo.h4">
                                        Two-factor verification
                                    </MudText>
                                </MudPaper>
                                <MudPaper Outlined Class="pa-3">
                                    <MudForm
                                        @ref="sendTwoFactorTokenForm"
                                        Model="SendTwoFactorTokenModel">
                                        <MudGrid Spacing="1" Justify="Justify.Center">
                                            <MudItem xs="12" Class="mb-4">
                                                <MudText Class="mt-2" Align="Align.Center" Typo="Typo.body1"
                                                         Style="width: 50ch; margin: auto">
                                                    Your account has enabled 2-FA (Two-factor authentication).
                                                    To verify a log in attempt, please select the provider.
                                                    You will receive a 6-digit code from the selected provider.
                                                </MudText>
                                            </MudItem>
                                            @foreach (var provider in providers.Where(x => x.Subscribed))
                                            {
                                                switch (provider.Name)
                                                {
                                                    case ProviderTypes.Authenticator:
                                                        <MudItem xs="12">
                                                            <MudLoadingButton
                                                                ButtonType="ButtonType.Button"
                                                                StartIcon="@Icons.Material.Filled.Smartphone"
                                                                OnClick="@(async () => await OnSendTokenAsync(provider.Name))"
                                                                Variant="Variant.Filled"
                                                                Color="Color.Primary"
                                                                Size="Size.Large"
                                                                FullWidth>
                                                                Send with @provider.Name
                                                            </MudLoadingButton>
                                                        </MudItem>
                                                        break;
                                                    case ProviderTypes.Sms:
                                                        <MudItem xs="12">
                                                            <MudLoadingButton
                                                                ButtonType="ButtonType.Button"
                                                                StartIcon="@Icons.Material.Filled.Sms"
                                                                OnClick="@(async () => await OnSendTokenAsync(provider.Name))"
                                                                Variant="Variant.Filled"
                                                                Color="Color.Primary"
                                                                Size="Size.Large"
                                                                FullWidth>
                                                                Send with @provider.Name
                                                            </MudLoadingButton>
                                                        </MudItem>
                                                        break;
                                                    case ProviderTypes.Email:
                                                        <MudItem xs="12">
                                                            <MudLoadingButton
                                                                ButtonType="ButtonType.Button"
                                                                StartIcon="@Icons.Material.Filled.Email"
                                                                OnClick="@(async () => await OnSendTokenAsync(provider.Name))"
                                                                Variant="Variant.Filled"
                                                                Color="Color.Primary"
                                                                Size="Size.Large"
                                                                FullWidth>
                                                                Send with @provider.Name
                                                            </MudLoadingButton>
                                                        </MudItem>
                                                        break;
                                                }
                                            }
                                        </MudGrid>
                                    </MudForm>
                                </MudPaper>
                                <MudPaper Outlined Class="pa-3">
                                    <MudText Align="Align.Center">You can read more about 2FA
                                        <MudLink
                                            OnClick="@(() => RouteManager.Route("/faq/security/2fa"))">
                                            here
                                        </MudLink>
                                    </MudText>
                                </MudPaper>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </ChildContent>
            </MudStepExtended>
            <MudStepExtended Icon="@Icons.Material.Filled.Login" Title="Code verification" Order="2">
                <ChildContent>
                    <MudGrid Justify="Justify.Center" Spacing="1">
                        <MudItem xs="8">
                            <MudStack Spacing="1" Justify="Justify.Center">
                                <MudPaper Outlined Class="pa-3">
                                    <MudText Align="Align.Center" Typo="Typo.h4">
                                        Code verification
                                    </MudText>
                                </MudPaper>
                                <MudPaper Outlined Class="pa-3">
                                    <MudForm
                                        @ref="twoFactorForm"
                                        Model="TwoFactorLoginModel"
                                        Validation="TwoFactorLoginValidator.ValidateValue">
                                        <MudStack Spacing="2">

                                            @switch (SendTwoFactorTokenModel.Provider)
                                            {
                                                case ProviderTypes.Email:
                                                {
                                                    <MudText Class="mt-2" Align="Align.Center" Typo="Typo.body1"
                                                             Style="width: 50ch; margin: auto">
                                                        Now enter the 6-digit code we sent to your email address.
                                                        If you don't receive the code, check your spam folder.
                                                        If you still don't receive the code, click the send button
                                                        again.
                                                    </MudText>
                                                    break;
                                                }
                                                case ProviderTypes.Sms:
                                                {
                                                    <MudText Class="mt-2" Align="Align.Center" Typo="Typo.body1"
                                                             Style="width: 50ch; margin: auto">
                                                        Now enter the 6-digit code we sent to your mobile phone.
                                                        If you don't receive the code, check your spam folder.
                                                        If you still don't receive the code, click the send button
                                                        again.
                                                    </MudText>
                                                    break;
                                                }
                                                case ProviderTypes.Authenticator:
                                                {
                                                    <MudText Class="mt-2" Align="Align.Center" Typo="Typo.body1"
                                                             Style="width: 50ch; margin: auto">
                                                        Now enter the 6-digit code we sent to your authenticator
                                                        app.
                                                    </MudText>
                                                    break;
                                                }
                                            }

                                            <MudCodeInput
                                                Count="6"
                                                Margin="Margin.Normal"
                                                Spacing="2"
                                                Class="d-flex align-items-center"
                                                @bind-Value="TwoFactorLoginModel.Code"
                                                Variant="Variant.Outlined"/>

                                            <MudLoadingButton
                                                ButtonType="ButtonType.Button"
                                                Disabled="TwoFactorLoginModel.Code.Length <= 5"
                                                StartIcon="@Icons.Material.Filled.Login"
                                                OnClick="@(async () => await OnVerifyTokenAsync())"
                                                Variant="Variant.Filled"
                                                Color="Color.Primary"
                                                FullWidth>
                                                Verify
                                            </MudLoadingButton>
                                        </MudStack>
                                    </MudForm>
                                </MudPaper>
                                <MudPaper Outlined Class="pa-3">
                                    <MudText Align="Align.Center">Didn't a receive code?
                                        <strong
                                            @onclick="@(async () => await OnSendTokenAsync(SendTwoFactorTokenModel.Provider))"
                                            class="cursor-pointer">
                                            Resend
                                        </strong>
                                    </MudText>
                                </MudPaper>
                            </MudStack>
                        </MudItem>
                    </MudGrid>
                </ChildContent>
            </MudStepExtended>
        </MudStepperExtended>
    </MudItem>
</MudGrid>

@code {
    [SupplyParameterFromForm] private SendTwoFactorTokenModel SendTwoFactorTokenModel { get; set; } = new();
    [SupplyParameterFromForm] private TwoFactorLoginModel TwoFactorLoginModel { get; set; } = new();

    [SupplyParameterFromQuery(Name = "id")]
    public Guid Id { get; set; }

    private MudForm sendTwoFactorTokenForm = new();
    private MudForm twoFactorForm = new();

    private MudStepperExtended stepper = new();
    private List<UserProviderDto> providers = [];

    protected override async Task OnInitializedAsync()
    {
        await LoadProvidersAsync();

        if (providers.Count == 1)
        {
            SendTwoFactorTokenModel.Provider = providers.First().Name;
        }
    }

    private async Task LoadProvidersAsync()
    {
        var result = await UserService.GetTwoFactorProvidersAsync(Id);

        if (result.Success)
        {
            providers = result.Get<List<UserProviderDto>>()!;
        }
        else
        {
            Snackbar.Add(result.Message, Severity.Error);
        }
    }

    private async Task OnSendTokenAsync(string provider)
    {
        SendTwoFactorTokenModel.Provider = provider;

        await sendTwoFactorTokenForm.Validate();

        if (sendTwoFactorTokenForm.IsValid)
        {
            if (SendTwoFactorTokenModel.Provider == ProviderTypes.Authenticator)
            {
                await StepNextAsync();
            }
            else
            {
                var request = Mapper.Map(SendTwoFactorTokenModel);
                request.UserId = Id;

                var result = await TwoFactorService.SendCodeAsync(request);

                if (result.Success)
                {
                    await StepNextAsync();
                }
                else
                {
                    Snackbar.Add(result.Message, Severity.Error);
                }
            }
        }
    }

    private async Task OnVerifyTokenAsync()
    {
        await twoFactorForm.Validate();

        if (twoFactorForm.IsValid)
        {
            var request = Mapper.Map(TwoFactorLoginModel);

            request.Provider = SendTwoFactorTokenModel.Provider;
            request.UserId = Id;

            var result = await TwoFactorService.LoginAsync(request);

            if (result.Success)
            {
                var response = result.Get<LoginResponse>()!;

                if (response.IsLockedOut)
                {
                    RouteManager.Route($"/account/locked-out?id={response.UserId}");
                }
                else
                {
                    await AuthenticationManager.LogInAsync(response!.AccessToken!, response.RefreshToken!);
                    Snackbar.Add(result.Message, Severity.Success);
                    RouteManager.Route("/products");
                }
            }
            else
            {
                Snackbar.Add(result.Message, Severity.Error);
            }
        }
    }

    private async Task StepNextAsync()
    {
        var index = stepper!.GetActiveIndex();
        await stepper!.CompleteStep(index);
    }

}
