@using Router = eShop.Infrastructure.Routing.RouteManager
@using Size = MudBlazor.Size

@inject AuthenticationManager AuthenticationManager
@inject Router RouteManager
@inject UserStateContainer UserStateContainer
@inject ISnackbar Snackbar
@inject IUserService UserService
@inject IStorage Storage

@implements IDisposable

<MudAvatar @onclick="DrawerToggle">
    <MudImage
        Src="/images/avatar.jpg"
        Alt="Avatar"
        FallbackSrc="/images/avatar.jpg"/>
</MudAvatar>
<MudDrawer Class="py-3"
           @bind-Open="isDrawerOpen"
           ClipMode="DrawerClipMode.Never"
           Overlay="true"
           Anchor="Anchor.End"
           Variant="DrawerVariant.Temporary"
           Width="300px"
           Elevation="2">
    <MudDrawerHeader Class="w-100">
        <MudStack Class="w-100">
            <MudStack Row="true" Justify="Justify.Center">
                <MudAvatar Size="Size.Large">
                    <MudImage
                        Src="/images/avatar.jpg"
                        Alt="Avatar"
                        FallbackSrc="/images/avatar.jpg"/>

                </MudAvatar>
            </MudStack>
            <MudText Inline="true" Align="Align.Center"> @UserStateContainer.Username </MudText>
            <MudDivider/>
        </MudStack>
    </MudDrawerHeader>
    <MudNavMenu Color="Color.Primary" Class="px-3">
        <MudNavLink
            OnClick="@(async () => await NavigateAsync("/account/profile"))"
            Match="NavLinkMatch.All"
            Icon="@Icons.Material.Filled.AccountBox">
            Profile
        </MudNavLink>
        <MudNavLink
            OnClick="@(async () => await NavigateAsync("/account/security"))"
            Match="NavLinkMatch.All"
            Icon="@Icons.Material.Filled.Security">
            Security
        </MudNavLink>
        <MudNavLink
            OnClick="@(async () => await NavigateAsync("/account/orders"))"
            Match="NavLinkMatch.All"
            Icon="@Icons.Material.Filled.ShoppingCart">
            Orders
        </MudNavLink>
        <MudNavLink
            OnClick="@(async () => await NavigateAsync("/account/orders-history"))"
            Match="NavLinkMatch.All"
            Icon="@Icons.Material.Filled.History">
            Order History
        </MudNavLink>
        <MudNavLink
            OnClick="@(async () => await NavigateAsync("/account/settings"))"
            Match="NavLinkMatch.All"
            Icon="@Icons.Material.Filled.Settings">
            Settings
        </MudNavLink>
        <MudDivider/>
        <MudNavLink
            Class="mt-2"
            Match="NavLinkMatch.All"
            OnClick="@(async () => await LogoutClick())"
            Icon="@Icons.Material.Filled.Logout">
            Logout
        </MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    private bool isDrawerOpen = false;

    protected override void OnInitialized()
    {
        UserStateContainer.OnChange += ReloadAsync;
    }

    private async Task ReloadAsync()
    {
        await LoadAsync();
        await InvokeAsync(StateHasChanged);
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await LoadAsync();
            StateHasChanged();
        }
    }

    private async Task LogoutClick()
    {
        await AuthenticationManager.LogOutAsync();
        Snackbar.Add("Successfully logged out.", Severity.Success);
        await RouteManager.NavigateAsync("/account/login");
    }

    private async Task LoadAsync()
    {
        var userId = await Storage.GetAsync<Guid>("userId");
        var result = await UserService.GetUserAsync(userId);

        if (result.Success)
        {
            var user = result.Get<UserDto>()!;
            
            UserStateContainer.UserId = user.Id;
            UserStateContainer.Username = user.Username;
            UserStateContainer.Email = user.Email;
            UserStateContainer.PhoneNumber = user.PhoneNumber;
        }
    }

    private void DrawerToggle() => isDrawerOpen = !isDrawerOpen;

    private async Task NavigateAsync(string uri)
    {
        await RouteManager.NavigateAsync(uri);
        DrawerToggle();
    }

    public void Dispose()
    {
        UserStateContainer.OnChange -= ReloadAsync;
    }

}