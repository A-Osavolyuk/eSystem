@using eSecurity.Client.Security.Authentication.Password
@inject ISnackbar Snackbar
@inject IPasswordService PasswordService
@inject ChangePasswordValidator Validator

<MudDialog Style="width: 600px">
    <TitleContent>
        Change password
    </TitleContent>
    <DialogContent>
        <MudForm 
            @ref="_changePasswordForm" 
            Model="Model" 
            Validation="Validator.ValidateValue">
            <MudPasswordField
                @bind-Value="Model.CurrentPassword"
                For="() => Model.CurrentPassword"
                Label="Current password"
                Variant="Variant.Outlined"
                Immediate="true"
                Clearable="true"/>
            <MudPasswordField
                @bind-Value="Model.NewPassword"
                For="() => Model.NewPassword"
                Label="New password"
                Variant="Variant.Outlined"
                Immediate="true"
                Clearable="true"/>
            <MudPasswordField
                @bind-Value="Model.ConfirmNewPassword"
                For="() => Model.ConfirmNewPassword"
                Label="Confirm new password"
                Variant="Variant.Outlined"
                Immediate="true"
                Clearable="true"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton
            Size="Size.Medium"
            Color="Color.Error"
            Variant="Variant.Outlined"
            ButtonType="ButtonType.Button"
            OnClick="@(() => OnCancel())">
            Cancel
        </MudButton>
        <MudButton
            Size="Size.Medium"
            Color="Color.Primary"
            Variant="Variant.Filled"
            ButtonType="ButtonType.Button"
            OnClick="@(async () => await OnSubmitAsync())">
            Submit
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance? Dialog { get; set; }
    [Parameter] public ChangePasswordModel Model { get; set; } = new();

    private MudForm _changePasswordForm = new();

    private async Task OnSubmitAsync()
    {
        await _changePasswordForm.Validate();

        if (_changePasswordForm.IsValid)
        {
            var request = new ChangePasswordRequest
            {
                UserId = Model.Id,
                CurrentPassword = Model.CurrentPassword,
                NewPassword = Model.NewPassword,
                ConfirmNewPassword = Model.ConfirmNewPassword,
            };

            var result = await PasswordService.ChangePasswordAsync(request);

            if (result.Succeeded)
            {
                Dialog?.Close(DialogResult.Ok(true));
            }
            else
            {
                Snackbar.Add(result.GetError().Description, Severity.Error);
            }
        }
    }
    
    private void OnCancel() => Dialog?.Close();
}