@page "/sign-up"

@using eSecurity.Client.Components.Layout
@using eSecurity.Client.Components.Pages.OAuth
@using eSecurity.Core.Common.Responses
@using eSystem.Core.Utilities.State
@using eSecurity.Client.Security

@inherits PageBase

@layout AuthenticationLayout

@inject ISecurityService SecurityService

<Title Text="Sign up for eSecurity"/>

<MudGrid Justify="Justify.Center">
    <MudItem xs="3" Style="margin-top: 50px">
        <MudPaper Class="pa-10" Elevation="4">
            <MudStack Spacing="3">
                <MudStack Spacing="3" AlignItems="AlignItems.Center">
                    <MudIcon Style="font-size: 5rem" Icon="@Icons.Material.Filled.Lock"/>
                    <MudTextM3 Align="Align.Center" Typo="TypoM3.Headline" Size="Size.Small">
                        Sign Up
                    </MudTextM3>
                </MudStack>
                <MudTextM3 Typo="TypoM3.Body" Size="Size.Medium" Align="Align.Center">
                    Enter your email address
                </MudTextM3>
                <MudForm Model="_model" @ref="_form">
                    <MudTextFieldExtended
                        T="string"
                        @bind-Value="_model.Email"
                        For="() => _model.Email"
                        Variant="Variant.Outlined"
                        Label="Email"
                        Error="_showError"
                        ErrorText="@_error"/>
                </MudForm>
                <MudButton
                    Color="Color.Primary"
                    Size="Size.Large"
                    Variant="Variant.Filled"
                    Disabled="@(string.IsNullOrEmpty(_model.Email))"
                    OnClick="@(async () => await OnContinueAsync())">
                    Continue
                </MudButton>
                <MudTextM3 Size="Size.Medium" Typo="TypoM3.Body">
                    Already have an account?
                    <MudLink Typo="Typo.body2" Href="@OnLogin()">
                        Log in
                    </MudLink>
                </MudTextM3>
                <MudStack Row="true" Spacing="2" AlignItems="AlignItems.Center" Justify="Justify.Center">
                    <MudDivider Style="max-width: 45%"/>
                    <MudTextM3 Typo="TypoM3.Body" Size="Size.Medium">OR</MudTextM3>
                    <MudDivider Style="max-width: 45%"/>
                </MudStack>
                <Providers/>
            </MudStack>
        </MudPaper>
    </MudItem>
</MudGrid>

@code {

    [SupplyParameterFromQuery(Name = "state")]
    public string? State { get; set; }

    private MudForm _form = new();
    private CheckEmailModel _model = new();

    private string? _error;
    private bool _showError;

    private async Task OnContinueAsync()
    {
        await _form.Validate();

        if (_form.IsValid)
        {
            var request = new CheckAccountRequest { Login = _model.Email };
            var result = await SecurityService.CheckAccountAsync(request);
            if (result.Succeeded && result.TryGetValue<CheckAccountResponse>(out var response) && response is not null)
            {
                if (response.Exists)
                {
                    _error = "This email address is already taken";
                    _showError = true;

                    return;
                }

                _error = null;
                _showError = false;

                var state = StateBuilder.Create()
                    .WithData("email", _model.Email)
                    .WithData("state", string.IsNullOrEmpty(State) 
                        ? AuthenticationManager.GetAuthorizationState() 
                        : State)
                    .Build();
                
                NavigationManager.NavigateTo(QueryBuilder.Create()
                    .WithUri(Links.Common.CompleteSignUp)
                    .WithQueryParam("state", state)
                    .Build());
            }
            else
            {
                var error = result.GetError();
                Snackbar.Add(error.Description, Severity.Error);
            }
        }
    }

    private string OnLogin()
    {
        var state = string.IsNullOrEmpty(State)
            ? AuthenticationManager.GetAuthorizationState()
            : State;
        
        var builder = QueryBuilder.Create()
            .WithUri(Links.Common.Login)
            .WithQueryParam("state", state);

        return builder.Build();
    }

}
