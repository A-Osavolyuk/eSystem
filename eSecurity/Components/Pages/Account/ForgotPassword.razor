@page "/account/password/forgot"
@using eSecurity.Features.Verification.Commands
@using eSecurity.Extensions
@inherits PageBase

@inject ForgotPasswordValidator ForgotPasswordValidator
@inject ResetPasswordValidator ConfirmResetPasswordValidator
@inject CodeModelValidator VerifyCodeValidator

<Title Text="Reset password"/>

<MudGrid Justify="Justify.Center">
    <MudItem xs="6" Style="margin-top: 100px">
        <MudStepperExtended @ref="stepper" Color="Color.Primary" Variant="Variant.Filled"
                            Animation="true"
                            HeaderTextView="HeaderTextView.All" HeaderBadgeView="HeaderBadgeView.All"
                            ShowNextButton="false" ShowPreviousButton="false" ShowSkipButton="false">
            <ChildContent>
                <MudStepExtended Order="0" Icon="@Icons.Material.Filled.Edit" Title="Request">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudStack Spacing="2" Justify="Justify.Center">
                                    <MudPaper Outlined Class="pa-3">
                                        <MudTextM3 Align="Align.Center" Typo="TypoM3.Headline" Size="Size.Small">
                                            Password reset
                                        </MudTextM3>
                                    </MudPaper>
                                    <MudPaper Outlined Class="py-4 px-5">
                                        <MudStack Spacing="2">
                                            <MudTextM3 Align="Align.Center" Typo="TypoM3.Body" Size="Size.Medium">
                                                To reset your password, please enter your primary (main) email address. 
                                                We will the send letter with 6-digit code and 
                                                instruction what to do the next steps
                                            </MudTextM3>
                                            <MudForm
                                                @ref="forgotPasswordForm"
                                                Model="ForgotPasswordModel"
                                                Validation="ForgotPasswordValidator.ValidateValue">
                                                <MudTextFieldExtended
                                                    Margin="Margin.Dense"
                                                    Label="Email" 
                                                    For="@(() => ForgotPasswordModel.Email)"
                                                    Variant="Variant.Outlined"
                                                    Immediate
                                                    @bind-Value="ForgotPasswordModel.Email"/>
                                            </MudForm>
                                            <MudLoadingButton
                                                IconSize="Size.Small"
                                                Variant="Variant.Filled"
                                                Color="Color.Success"
                                                ButtonType="ButtonType.Button"
                                                Disabled="@(string.IsNullOrEmpty(ForgotPasswordModel.Email))"
                                                OnClick="@(async () => await OnForgotPasswordAsync())">
                                                Send code
                                            </MudLoadingButton>
                                            <MudButton
                                                Size="Size.Small"
                                                Variant="Variant.Text"
                                                Color="Color.Info"
                                                ButtonType="ButtonType.Button"
                                                Href="@ReturnUrl"
                                                OnClick="@(() => NavigationManager.NavigateTo(ReturnUrl))">
                                                Cancel
                                            </MudButton>
                                        </MudStack>
                                    </MudPaper>
                                </MudStack>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Order="1" Icon="@Icons.Material.Filled.ConfirmationNumber" Title="Confirmation">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudStack Spacing="1" Justify="Justify.Center">
                                    <MudPaper Outlined Class="pa-3">
                                        <MudTextM3 Align="Align.Center" Typo="TypoM3.Headline" Size="Size.Small">
                                            Confirm reset
                                        </MudTextM3>
                                    </MudPaper>
                                    <MudPaper Outlined Class="py-4 px-5">
                                        <MudStack Spacing="2">
                                            <MudTextM3 Align="Align.Center" Typo="TypoM3.Body" Size="Size.Medium">
                                                Enter the code we sent you to:
                                                <strong>@ForgotPasswordModel.Email</strong>
                                            </MudTextM3>
                                            <MudForm
                                                @ref="verifyCodeForm"
                                                Model="CodeModel"
                                                Validation="VerifyCodeValidator.ValidateValue">
                                                <MudTextFieldExtended
                                                    @bind-Value="CodeModel.Code"
                                                    Variant="Variant.Outlined"
                                                    Margin="Margin.Dense"
                                                    Placeholder="XXXXXX"
                                                    Mask="mask"
                                                    Clearable="true"
                                                    Immediate="true"/>
                                            </MudForm>
                                            <MudLoadingButton
                                                Size="Size.Small"
                                                Variant="Variant.Filled"
                                                Color="Color.Success"
                                                Disabled="@(CodeModel.Code.Length <= 5)"
                                                ButtonType="ButtonType.Button"
                                                OnClick="@(async () => await OnVerifyAsync())">
                                                Confirm
                                            </MudLoadingButton>
                                            <MudButton
                                                Size="Size.Small"
                                                Variant="Variant.Text"
                                                Color="Color.Info"
                                                ButtonType="ButtonType.Button"
                                                Href="@ReturnUrl"
                                                OnClick="@(() => NavigationManager.NavigateTo(ReturnUrl))">
                                                Cancel
                                            </MudButton>
                                        </MudStack>
                                    </MudPaper>
                                    <CodeResend Context="context"></CodeResend>
                                </MudStack>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Order="2" Icon="@Icons.Material.Filled.Save" Title="Reset">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudStack Spacing="1" Justify="Justify.Center">
                                    <MudPaper Outlined Class="pa-3">
                                        <MudTextM3 Align="Align.Center" Typo="TypoM3.Headline" Size="Size.Small">
                                            New password
                                        </MudTextM3>
                                    </MudPaper>
                                    <MudPaper Outlined Class="py-4 px-5">
                                        <MudStack Spacing="2">
                                            <MudForm
                                                @ref="resetPasswordForm"
                                                Model="PasswordResetModel"
                                                Validation="ConfirmResetPasswordValidator.ValidateValue">
                                                <MudPasswordField
                                                    Margin="Margin.Dense"
                                                    Label="New password"
                                                    Immediate="true"
                                                    PasswordMode="true"
                                                    IconSize="Size.Small"
                                                    For="@(() => PasswordResetModel.NewPassword)"
                                                    Variant="Variant.Outlined"
                                                    @bind-Value="PasswordResetModel.NewPassword"/>
                                                <MudPasswordField
                                                    Margin="Margin.Dense"
                                                    Label="Confirm new password"
                                                    Immediate="true"
                                                    PasswordMode="true"
                                                    IconSize="Size.Small"
                                                    For="@(() => PasswordResetModel.ConfirmNewPassword)"
                                                    Variant="Variant.Outlined"
                                                    @bind-Value="PasswordResetModel.ConfirmNewPassword"/>
                                            </MudForm>
                                            <MudLoadingButton
                                                Size="Size.Small"
                                                Variant="Variant.Filled"
                                                Color="Color.Success"
                                                ButtonType="ButtonType.Button"
                                                OnClick="@(async () => await OnReset())">
                                                Reset password
                                            </MudLoadingButton>
                                            <MudButton
                                                Size="Size.Small"
                                                Variant="Variant.Text"
                                                Color="Color.Info"
                                                ButtonType="ButtonType.Button"
                                                Href="@ReturnUrl"
                                                OnClick="@(() => NavigationManager.NavigateTo(ReturnUrl))">
                                                Cancel
                                            </MudButton>
                                        </MudStack>
                                    </MudPaper>
                                </MudStack>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
            </ChildContent>
        </MudStepperExtended>
    </MudItem>
</MudGrid>

@code {
    [SupplyParameterFromQuery(Name = "return_url")]
    public string ReturnUrl { get; set; } = null!;
    
    [SupplyParameterFromForm] 
    private ForgotPasswordModel ForgotPasswordModel { get; set; } = new();
    
    [SupplyParameterFromForm] 
    private CodeModel CodeModel { get; set; } = new();
    
    [SupplyParameterFromForm] 
    private ResetPasswordModel PasswordResetModel { get; set; } = new();

    private PatternMask mask = new("000000");
    private MudStepperExtended stepper = new();
    private MudForm forgotPasswordForm = new();
    private MudForm resetPasswordForm = new();
    private MudForm verifyCodeForm = new();
    private MessageContext context = new();

    private Guid userId;

    private async Task SendCodeAsync()
    {
        var command = context.ToSendCodeCommand();
        var response = await Sender.Send(command);
        Snackbar.Add(response.Message, response.Succeeded ? Severity.Success : Severity.Error);
    }

    private async Task OnForgotPasswordAsync()
    {
        await forgotPasswordForm.Validate();

        if (forgotPasswordForm.IsValid)
        {
            context = new MessageContext()
            {
                UserId = userId,
                Sender = SenderType.Email,
                Purpose = PurposeType.Password,
                Action = ActionType.Reset,
                Payload = new()
                {
                    { "To", ForgotPasswordModel.Email }
                }
            };
            
            var command = new ForgotPasswordCommand() { Email = ForgotPasswordModel.Email };
            var result = await Sender.Send(command);

            if (result.Succeeded)
            {
                var response = result.Get<ForgotPasswordResponse>()!;
                userId = response.UserId;

                await SendCodeAsync();
                await stepper.StepNextAsync();
            }
            else
            {
                Snackbar.Add(result.Message, Severity.Error);
            }
        }
    }

    private async Task OnVerifyAsync()
    {
        await verifyCodeForm.Validate();

        if (verifyCodeForm.IsValid)
        {
            var command = context.ToVerifyCodeCommand(CodeModel.Code);
            var result = await Sender.Send(command);

            if (result.Succeeded)
            {
                Snackbar.Add(result.Message, Severity.Success);
                await stepper.StepNextAsync();
            }
            else
            {
                Snackbar.Add(result.Message, Severity.Error);
            }
        }
    }

    private async Task OnReset()
    {
        await resetPasswordForm.Validate();

        if (resetPasswordForm.IsValid)
        {
            var command = new ResetPasswordCommand()
            {
                NewPassword = PasswordResetModel.NewPassword,
                UserId = userId
            };

            var result = await Sender.Send(command);

            if (result.Succeeded)
            {
                Snackbar.Add(result.Message, Severity.Success);
                NavigationManager.NavigateTo(ReturnUrl);
            }

            Snackbar.Add(result.Message, Severity.Error);
        }
    }
}
