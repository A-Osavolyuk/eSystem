@page "/connect/logout"
@using eSecurity.Features.Connect.Commands
@using eSecurity.Security.Authentication.Odic.Logout

@inherits PageBase

@attribute [Authorize]


<MudGrid Justify="Justify.Center">
    <MudItem xs="3" Style="margin-top: 50px;">
        <MudStack Spacing="2">
            <MudPaper Outlined="true" Class="px-5 py-4">
                <MudGrid>
                    <MudItem xs="1">
                        <MudAvatar Size="Size.Medium">
                            <MudImage
                                Src="/images/avatar.jpg"
                                Alt="Avatar"
                                FallbackSrc="/images/avatar.jpg"/>
                        </MudAvatar>
                    </MudItem>
                    <MudItem xs="10">
                        <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
                            <MudTextM3 Class="pt-2">
                                Signed-in as <strong>@UserState.Credentials?.Username</strong>
                            </MudTextM3>
                        </MudStack>
                    </MudItem>
                </MudGrid>
            </MudPaper>
            <MudButton
                Size="Size.Large"
                Color="Color.Error"
                Variant="Variant.Outlined"
                ButtonType="ButtonType.Button"
                OnClick="@(async () => await LogoutAsync())">
                Sign out
            </MudButton>
        </MudStack>
    </MudItem>
</MudGrid>

@code {
    [SupplyParameterFromQuery(Name = "id_token_hint")]
    public string? IdTokenHint { get; set; }
    
    [SupplyParameterFromQuery(Name = "post_logout_redirect_uri")]
    public string? PostLogoutRedirectUri { get; set; }
    
    [SupplyParameterFromQuery(Name = "state")]
    public string? State { get; set; }
    
    [SupplyParameterFromQuery(Name = "client_id")]
    public string? ClientId { get; set; }
    
    [SupplyParameterFromQuery(Name = "logout_hint")]
    public string? LogoutHint { get; set; }
    
    [SupplyParameterFromQuery(Name = "ui_locales")]
    public string? UiLocales { get; set; }

    private async Task LogoutAsync()
    {
        LogoutCommand? command;
        if (string.IsNullOrEmpty(IdTokenHint) && string.IsNullOrEmpty(PostLogoutRedirectUri))
        {
            command = new LogoutCommand() { Type = LogoutType.Manual };
        }
        else
        {
            command = new LogoutCommand()
            {
                Type = LogoutType.Oidc,
                ClientId = ClientId,
                IdTokenHint = IdTokenHint,
                PostLogoutRedirectUri = PostLogoutRedirectUri,
                LogoutHint = LogoutHint,
                State = State,
                UiLocales = UiLocales
            };
        }
        
        var result = await Sender.Send(command);

        if (result.Succeeded)
        {
            await AuthenticationManager.SignOutAsync();
            
            var response = result.Get<LogoutResponse>();
            NavigationManager.NavigateTo(response.RedirectUri);
        }
        else Snackbar.Add(result.Message, Severity.Error);
    }
}