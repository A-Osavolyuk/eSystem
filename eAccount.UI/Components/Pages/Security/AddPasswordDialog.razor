@using eSystem.Core.Requests.Auth
@inject IUserService UserService
@inject ISecurityService SecurityService
@inject ISnackbar Snackbar
@inject AddPasswordValidator Validator

<MudDialog Style="width: 600px">
    <TitleContent>
        Add password
    </TitleContent>
    <DialogContent>
        <MudForm 
            @ref="addPasswordForm" 
            Model="Model" 
            Validation="Validator.ValidateValue">
            <MudPasswordField
                @bind-Value="Model.Password"
                For="() => Model.Password"
                Label="Password"
                Variant="Variant.Outlined"
                Immediate="true"
                Clearable="true"/>
            <MudPasswordField
                @bind-Value="Model.ConfirmPassword"
                For="() => Model.ConfirmPassword"
                Label="Confirm password"
                Variant="Variant.Outlined"
                Immediate="true"
                Clearable="true"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton
            Color="Color.Error"
            Variant="Variant.Outlined"
            ButtonType="ButtonType.Button"
            OnClick="@(() => OnCancel())">
            Cancel
        </MudButton>
        <MudButton
            Color="Color.Primary"
            Variant="Variant.Filled"
            ButtonType="ButtonType.Button"
            OnClick="@(async () => await OnSubmitAsync())">
            Submit
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance? Dialog { get; set; }
    [Parameter] public AddPasswordModel Model { get; set; } = new();

    private MudForm addPasswordForm = new();

    private async Task OnSubmitAsync()
    {
        await addPasswordForm.Validate();

        if (addPasswordForm.IsValid)
        {
            var request = new AddPasswordRequest()
            {
                UserId = Model.UserId,
                Password = Model.Password
            };
            
            var result = await SecurityService.AddPasswordAsync(request);

            if (result.Success)
            {
                Dialog?.Close(DialogResult.Ok(true));
            }
            else
            {
                Snackbar.Add(result.Message, Severity.Error);
            }
        }
    }
    
    private void OnCancel() => Dialog?.Close();
}