@page "/account/change-email/"

@inherits PageBase

@using Size = MudBlazor.Size

@inject ChangeEmailValidator ChangeEmailValidator
@inject AuthenticationManager AuthenticationManager
@inject ISecurityService SecurityService

<Title Text="Change email"></Title>

<MudGrid Justify="Justify.Center">
    <MudItem xs="8" Style="margin-top:150px">
        <MudStepperExtended @ref="stepper" Color="Color.Primary" Variant="Variant.Filled"
                            HeaderTextView="HeaderTextView.All" HeaderBadgeView="HeaderBadgeView.All"
                            ShowNextButton="false" ShowPreviousButton="false" ShowSkipButton="false">
            <ChildContent>
                <MudStepExtended Order="0" Icon="@Icons.Material.Filled.Start" Title="Request">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="6">
                                <MudPaper Style="margin-bottom: 10px" Outlined Class="pa-3">
                                    <MudText Align="Align.Center" Typo="Typo.h4">
                                        Email change
                                    </MudText>
                                </MudPaper>
                            </MudItem>
                            <MudItem xs="6">
                                <MudPaper Outlined="true" Class="pa-5">
                                    <MudForm @ref="changeEmailForm" Validation="ChangeEmailValidator">
                                        <MudGrid Justify="Justify.Center">
                                            <MudItem xs="12">
                                                <MudText Class="mb-1">
                                                    To change email, you should enter new email address.
                                                    Please, enter new email address.
                                                </MudText>
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudTextField
                                                    @bind-Value="ChangeEmailModel.NewEmail"
                                                    For="() => ChangeEmailModel.NewEmail"
                                                    Label="New email"
                                                    Variant="Variant.Outlined"
                                                    Immediate="true"
                                                    Clearable="true"/>
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudButton
                                                    FullWidth="true"
                                                    Variant="Variant.Filled"
                                                    Color="Color.Primary"
                                                    ButtonType="ButtonType.Button"
                                                    OnClick="async () => await OnChangeEmailAsync()">
                                                    Change
                                                </MudButton>
                                            </MudItem>
                                        </MudGrid>
                                    </MudForm>
                                </MudPaper>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Order="1" Icon="@Icons.Material.Filled.Check" Title="Confirmation">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="6">
                                <MudPaper Style="margin-bottom: 10px" Outlined Class="pa-3">
                                    <MudText Align="Align.Center" Typo="Typo.h4">
                                        Code confirmation
                                    </MudText>
                                </MudPaper>
                            </MudItem>
                            <MudItem xs="6">
                                <MudPaper Outlined="true" Class="pa-5">
                                    <MudForm>
                                        <MudGrid Justify="Justify.Center">
                                            <MudItem xs="12">
                                                <MudText Class="mb-2">
                                                    Enter code from letter we sent your current email address
                                                </MudText>
                                            </MudItem>
                                            <MudItem xs="7">
                                                <MudCodeInput
                                                    Count="6"
                                                    Margin="Margin.Normal" Spacing="1"
                                                    @bind-Value="ConfirmChangeEmailModel.CurrentEmailCode"
                                                    Variant="Variant.Outlined"
                                                    Required/>
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudButton
                                                    FullWidth="true"
                                                    Variant="Variant.Filled"
                                                    Color="Color.Primary"
                                                    ButtonType="ButtonType.Button"
                                                    OnClick="async () => await StepNextAsync()">
                                                    Confirm
                                                </MudButton>
                                            </MudItem>
                                        </MudGrid>
                                    </MudForm>
                                </MudPaper>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Order="2" Icon="@Icons.Material.Filled.Check" Title="Verification">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="6">
                                <MudPaper Style="margin-bottom: 10px" Outlined Class="pa-3">
                                    <MudText Align="Align.Center" Typo="Typo.h4">
                                        Email verification
                                    </MudText>
                                </MudPaper>
                            </MudItem>
                            <MudItem xs="6">
                                <MudPaper Outlined="true" Class="pa-5">
                                    <MudForm>
                                        <MudGrid Justify="Justify.Center">
                                            <MudItem xs="12">
                                                <MudText Class="mb-2">
                                                    Enter code from letter we sent you to: @ChangeEmailModel.NewEmail
                                                </MudText>
                                            </MudItem>
                                            <MudItem xs="7">
                                                <MudCodeInput
                                                    Count="6"
                                                    Margin="Margin.Normal" Spacing="1"
                                                    @bind-Value="ConfirmChangeEmailModel.NewEmailCode"
                                                    Variant="Variant.Outlined"
                                                    Required/>
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudButton
                                                    FullWidth="true"
                                                    Variant="Variant.Filled"
                                                    Color="Color.Primary"
                                                    ButtonType="ButtonType.Button"
                                                    OnClick="async () => await OnConfirmEmailChangeAsync()">
                                                    Verify
                                                </MudButton>
                                            </MudItem>
                                        </MudGrid>
                                    </MudForm>
                                </MudPaper>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Icon="@Icons.Material.Filled.Alarm" Title="Email changed" IsResultStep="true">
                    <ChildContent>
                        <div class="d-flex flex-column align-center justify-center" style="height: 200px">
                            <MudIconButton Icon="@Icons.Material.Filled.DoneAll" Size="Size.Large"
                                           Variant="Variant.Filled" Color="Color.Success"/>
                            <MudText Style="width: 55ch; margin: auto">
                                Your email address was successfully changed.
                                You will be redirected to login page to re-sign up with a new email address in 5
                                seconds.
                            </MudText>
                        </div>
                    </ChildContent>
                </MudStepExtended>
            </ChildContent>
        </MudStepperExtended>
    </MudItem>
</MudGrid>

@code {
    [SupplyParameterFromForm] private ChangeEmailModel ChangeEmailModel { get; set; } = new();
    [SupplyParameterFromForm] private ConfirmChangeEmailModel ConfirmChangeEmailModel { get; set; } = new();

    private MudStepperExtended stepper = new();
    private MudForm changeEmailForm = new();

    private Guid userId;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            userId = await UserStorage.GetAsync();
        }
    }

    private async Task OnChangeEmailAsync()
    {
        await changeEmailForm.Validate();

        if (changeEmailForm.IsValid)
        {
            var request = new ChangeEmailRequest()
            {
                UserId = userId,
                NewEmail = ChangeEmailModel.NewEmail
            };

            var result = await SecurityService.ChangeEmailAsync(request);

            if (result.Success)
            {
                Snackbar.Add("Confirmation codes were send", Severity.Success);
                await StepNextAsync();
            }
            else
            {
                Snackbar.Add(result.Message, Severity.Error);
            }
        }
    }

    private async Task OnConfirmEmailChangeAsync()
    {
        var request = new ConfirmEmailChangeRequest()
        {
            CurrentEmailCode = ConfirmChangeEmailModel.CurrentEmailCode,
            NewEmailCode = ConfirmChangeEmailModel.NewEmailCode,
            NewEmail = ConfirmChangeEmailModel.NewEmail,
            UserId = userId
        };

        var result = await SecurityService.ConfirmChangeEmailAsync(request);

        if (result.Success)
        {
            var response = result.Get<ConfirmChangeEmailResponse>()!;
            await StepNextAsync();
            
            Snackbar.Add("Email address was successfully changed", Severity.Success);
            await AuthenticationManager.ReauthenticateAsync(response.AccessToken, response.RefreshToken);
            NavigationManager.NavigateTo("/account/login");
        }
        else
        {
            Snackbar.Add(result.Message, Severity.Error);
        }
    }

    private async Task StepNextAsync()
    {
        var index = stepper!.GetActiveIndex();
        await stepper!.CompleteStep(index);
    }

}
