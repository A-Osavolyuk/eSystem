@page "/account/email/reset"

@using Size = MudBlazor.Size
@inherits PageBase

@inject ISecurityService SecurityService

<Title Text="Reset email"></Title>

<MudGrid Justify="Justify.Center">
    <MudItem xs="6" Style="margin-top:150px">
        <MudStepperExtended @ref="stepper" Color="Color.Primary" Variant="Variant.Filled"
                            HeaderTextView="HeaderTextView.All" HeaderBadgeView="HeaderBadgeView.All"
                            ShowNextButton="false" ShowPreviousButton="false" ShowSkipButton="false">
            <ChildContent>
                <MudStepExtended Order="0" Icon="@Icons.Material.Filled.Start" Title="Request">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudPaper Style="margin-bottom: 10px" Outlined Class="pa-3">
                                    <MudText Align="Align.Center" Typo="Typo.h4">
                                        Email reset
                                    </MudText>
                                </MudPaper>
                                <MudPaper Outlined="true" Class="pa-5">
                                    <MudForm Validation="ResetEmailModel">
                                        <MudGrid Justify="Justify.Center">
                                            <MudItem xs="12">
                                                <MudText Class="mb-1" Align="Align.Center">
                                                    To reset email address, you should enter new email address.
                                                    Please, enter new email address.
                                                </MudText>
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudTextField
                                                    @bind-Value="ResetEmailModel.NewEmail"
                                                    For="() => ResetEmailModel.NewEmail"
                                                    Label="New email"
                                                    Variant="Variant.Outlined"
                                                    Immediate="true"
                                                    Clearable="true"/>
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudButton
                                                    FullWidth="true"
                                                    Variant="Variant.Filled"
                                                    Color="Color.Primary"
                                                    ButtonType="ButtonType.Button"
                                                    OnClick="async () => await OnResetEmailAsync()">
                                                    Change
                                                </MudButton>
                                            </MudItem>
                                        </MudGrid>
                                    </MudForm>
                                </MudPaper>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Order="1" Icon="@Icons.Material.Filled.Check" Title="Verification">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudPaper Style="margin-bottom: 10px" Outlined Class="pa-3">
                                    <MudText Align="Align.Center" Typo="Typo.h4">
                                        Email verification
                                    </MudText>
                                </MudPaper>
                                <MudPaper Outlined="true" Class="pa-5">
                                    <MudForm>
                                        <MudGrid Justify="Justify.Center">
                                            <MudItem xs="12">
                                                <MudText Class="mb-2" Align="Align.Center">
                                                    Enter code from the letter we sent you
                                                    to: <strong>@ConfirmResetEmailModel.NewEmail</strong>
                                                </MudText>
                                            </MudItem>
                                            <MudItem xs="7">
                                                <MudCodeInput
                                                    Count="6"
                                                    Margin="Margin.Normal" Spacing="1"
                                                    @bind-Value="ConfirmResetEmailModel.Code"
                                                    Variant="Variant.Outlined"
                                                    Required/>
                                            </MudItem>
                                            <MudItem xs="12">
                                                <MudButton
                                                    FullWidth="true"
                                                    Variant="Variant.Filled"
                                                    Color="Color.Primary"
                                                    ButtonType="ButtonType.Button"
                                                    OnClick="async () => await OnConfirmResetEmailAsync()">
                                                    Verify
                                                </MudButton>
                                            </MudItem>
                                        </MudGrid>
                                    </MudForm>
                                </MudPaper>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Icon="@Icons.Material.Filled.Alarm" Title="Email reset" IsResultStep="true">
                    <ChildContent>
                        <div class="d-flex flex-column align-center justify-center" style="height: 200px">
                            <MudIconButton Icon="@Icons.Material.Filled.DoneAll" Size="Size.Large"
                                           Variant="Variant.Filled" Color="Color.Success"/>
                            <MudText Style="width: 55ch; margin: auto">
                                Your email address was successfully reset.
                                You will be redirected to profile page in 5 seconds.
                            </MudText>
                        </div>
                    </ChildContent>
                </MudStepExtended>
            </ChildContent>
        </MudStepperExtended>
    </MudItem>
</MudGrid>

@code {
    [SupplyParameterFromForm] private ResetEmailModel ResetEmailModel { get; set; } = new();
    [SupplyParameterFromForm] private ConfirmResetEmailModel ConfirmResetEmailModel { get; set; } = new();

    private MudStepperExtended stepper = new();
    private Guid userId;
    private bool completed = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            userId = await LocalStorage.GetAsync<Guid>("userId");
        }

        if (completed)
        {
            await OnCompleteAsync();
        }
    }

    private async Task OnResetEmailAsync()
    {
        var request = new ResetEmailRequest()
        {
            Id = userId,
            NewEmail = ResetEmailModel.NewEmail
        };

        var result = await SecurityService.ResetEmailAsync(request);

        if (result.Success)
        {
            await StepNextAsync();
        }
        else
        {
            Snackbar.Add(result.Message, Severity.Error);
        }
    }

    private async Task OnConfirmResetEmailAsync()
    {
        var request = new ConfirmResetEmailRequest()
        {
            Id = userId,
            NewEmail = ResetEmailModel.NewEmail,
            Code = ConfirmResetEmailModel.Code
        };

        var result = await SecurityService.ConfirmResetEmailAsync(request);

        if (result.Success)
        {
            Snackbar.Add("Email was successfully reset", Severity.Success);
            await StepNextAsync();
        }
        else
        {
            Snackbar.Add(result.Message, Severity.Error);
        }
    }

    private async Task StepNextAsync()
    {
        var index = stepper!.GetActiveIndex();
        await stepper!.CompleteStep(index);
        
        if (stepper.IsAllStepsCompleted())
        {
            completed = true;
            StateHasChanged();
        }
    }
    
    private async Task OnCompleteAsync()
    {
        await Task.Delay(TimeSpan.FromMicroseconds(5));
        NavigationManager.NavigateTo("profile");
    }

}