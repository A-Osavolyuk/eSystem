@switch (Model.Type.Name)
{
   case "Fruit":
   {
      <MudPaper Class="pa-3" Outlined="true">
         <MudGrid Justify="Justify.Center">
            <MudItem xs="12">
               <MudText Typo="Typo.h6">Product properties</MudText>
            </MudItem>
            <MudItem xs="12" Style="padding-top: 0">
               <FruitProperties Properties="Model.Properties"/>
            </MudItem>
         </MudGrid>
      </MudPaper>
      
      break;
   }
   case "Vegetable": break;
   case "Berry": break;
}

@code {
   [Parameter] public ProductModel Model { get; set; } = new();

   protected override void OnInitialized()
   {
      Model.Properties = Model.Type.Name switch
      {
         "Fruit" => new()
         {
            { "Color", string.Empty },
            { "Variety", string.Empty },
            { "CountryOfOrigin", string.Empty },
            { "RipenessStage", string.Empty },
            { "StorageTemperature", string.Empty },
            { "Grade", string.Empty },
            { "RequiresRefrigeration", false },
            { "ContainsSeeds", false },
            { "IsTropical", false },
            { "IsOrganic", false },
         },
         _ => []
      };
   }

}