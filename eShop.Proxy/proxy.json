{
  "$schema": "https://raw.githubusercontent.com/A-Osavolyuk/Schemas/main/proxy.schema.json",
  "ReverseProxy": {
    "Routes": {
      "security-route": {
        "ClusterID": "security-cluster",
        "Match": {
          "Path": "api/v1/Security/{**catch-all}"
        }
      },
      "admin-route": {
        "ClusterID": "security-cluster",
        "Match": {
          "Path": "api/v1/Admin/{**catch-all}"
        }
      },
      "profile-route": {
        "ClusterID": "security-cluster",
        "Match": {
          "Path": "api/v1/Profile/{**catch-all}"
        }
      },
      "two-factor-route": {
        "ClusterID": "security-cluster",
        "Match": {
          "Path": "api/v1/TwoFactor/{**catch-all}"
        }
      },
      "lockout-route": {
        "ClusterID": "security-cluster",
        "Match": {
          "Path": "api/v1/Lockout/{**catch-all}"
        }
      },
      "cart-route": {
        "ClusterID": "cart-cluster",
        "Match": {
          "Path": "api/v1/Carts/{**catch-all}"
        }
      },
      "favorites-route": {
        "ClusterID": "cart-cluster",
        "Match": {
          "Path": "api/v1/Favorites/{**catch-all}"
        }
      },
      "brand-route": {
        "ClusterID": "product-cluster",
        "Match": {
          "Path": "api/v1/Brands/{**catch-all}"
        }
      },
      "product-route": {
        "ClusterID": "product-cluster",
        "Match": {
          "Path": "api/v1/Products/{**catch-all}"
        }
      },
      "seller-route": {
        "ClusterID": "product-cluster",
        "Match": {
          "Path": "api/v1/Seller/{**catch-all}"
        }
      },
      "comment-route": {
        "ClusterID": "review-cluster",
        "Match": {
          "Path": "api/v1/Comments/{**catch-all}"
        }
      },
      "files-route": {
        "ClusterID": "files-cluster",
        "Match": {
          "Path": "api/v1/Files/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "security-cluster": {
        "Destinations": {
          "security-destination": {
            "Address": "https://localhost:40201"
          }
        }
      },
      "email-cluster": {
        "Destinations": {
          "review-destination": {
            "Address": "https://localhost:40202"
          }
        }
      },
      "files-cluster": {
        "Destinations": {
          "files-destination": {
            "Address": "https://localhost:40203"
          }
        }
      },
      "product-cluster": {
        "Destinations": {
          "product-destination": {
            "Address": "https://localhost:40204"
          }
        }
      },
      "cart-cluster": {
        "Destinations": {
          "cart-destination": {
            "Address": "https://localhost:40205"
          }
        }
      },
      "review-cluster": {
        "Destinations": {
          "review-destination": {
            "Address": "https://localhost:40206"
          }
        }
      },
      "sms-cluster": {
        "Destinations": {
          "review-destination": {
            "Address": "https://localhost:40207"
          }
        }
      },
      "telegram-cluster": {
        "Destinations": {
          "review-destination": {
            "Address": "https://localhost:40208"
          }
        }
      }
    }
  }
}