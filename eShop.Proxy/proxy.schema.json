{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "ReverseProxy": {
      "type": "object",
      "properties": {
        "Routes": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "ClusterId": { "type": "string" },
              "Order": { "type": "integer" },
              "MaxRequestBodySize": { "type": "integer" },
              "AuthorizationPolicy": { "type": "string" },
              "CorsPolicy": { "type": "string" },
              "Match": {
                "type": "object",
                "properties": {
                  "Path": { "type": "string" },
                  "Hosts": { "type": "array", "items": { "type": "string" } },
                  "Methods": { "type": "array", "items": { "type": "string" } },
                  "Headers": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "Name": { "type": "string" },
                        "Values": { "type": "array", "items": { "type": "string" } },
                        "Mode": { "type": "string" },
                        "IsCaseSensitive": { "type": "boolean" }
                      }
                    }
                  },
                  "QueryParameters": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "Name": { "type": "string" },
                        "Values": { "type": "array", "items": { "type": "string" } },
                        "Mode": { "type": "string" },
                        "IsCaseSensitive": { "type": "boolean" }
                      }
                    }
                  }
                }
              },
              "Metadata": { "type": "object", "additionalProperties": { "type": "string" } },
              "Transforms": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "RequestHeader": { "type": "string" },
                    "Set": { "type": "string" }
                  }
                }
              }
            }
          }
        },
        "Clusters": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "Destinations": {
                "type": "object",
                "additionalProperties": {
                  "type": "object",
                  "properties": {
                    "Address": { "type": "string" },
                    "Health": { "type": "string" }
                  }
                }
              },
              "LoadBalancingPolicy": {
                "type": "string",
                "enum": ["FirstAlphabetical", "Random", "RoundRobin", "LeastRequests", "PowerOfTwoChoices"]
              },
              "SessionAffinity": {
                "type": "object",
                "properties": {
                  "Enabled": { "type": "boolean" },
                  "Policy": { "type": "string" },
                  "FailurePolicy": { "type": "string" },
                  "Settings": {
                    "type": "object",
                    "properties": {
                      "CustomHeaderName": { "type": "string" }
                    }
                  }
                }
              },
              "HealthCheck": {
                "type": "object",
                "properties": {
                  "Active": {
                    "type": "object",
                    "properties": {
                      "Enabled": { "type": "boolean" },
                      "Interval": { "type": "string" },
                      "Timeout": { "type": "string" },
                      "Policy": { "type": "string" },
                      "Path": { "type": "string" },
                      "Query": { "type": "string" }
                    }
                  },
                  "Passive": {
                    "type": "object",
                    "properties": {
                      "Enabled": { "type": "boolean" },
                      "Policy": { "type": "string" },
                      "ReactivationPeriod": { "type": "string" }
                    }
                  }
                }
              },
              "HttpClient": {
                "type": "object",
                "properties": {
                  "SSLProtocols": { "type": "string" },
                  "DangerousAcceptAnyServerCertificate": { "type": "boolean" },
                  "MaxConnectionsPerServer": { "type": "integer" },
                  "EnableMultipleHttp2Connections": { "type": "boolean" },
                  "RequestHeaderEncoding": { "type": "string" },
                  "ResponseHeaderEncoding": { "type": "string" }
                }
              },
              "HttpRequest": {
                "type": "object",
                "properties": {
                  "ActivityTimeout": { "type": "string" },
                  "Version": { "type": "string" },
                  "VersionPolicy": { "type": "string" },
                  "AllowResponseBuffering": { "type": "boolean" }
                }
              },
              "Metadata": { "type": "object", "additionalProperties": { "type": "string" } }
            }
          }
        }
      }
    }
  }
}
