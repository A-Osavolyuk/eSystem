@page "/forgot-password"

@using eSecurity.Client.Security.Authentication.Password
@using eSecurity.Client.Security.Authorization.Access.Verification

@inherits PageBase

@inject ForgotPasswordValidator ForgotPasswordValidator
@inject ResetPasswordValidator ConfirmResetPasswordValidator
@inject CodeModelValidator VerifyCodeValidator
@inject IVerificationService VerificationService
@inject IPasswordService PasswordService

<Title Text="Reset password"/>

<MudGrid Justify="Justify.Center">
    <MudItem xs="6" Style="margin-top: 100px">
        <MudStepperExtended @ref="_stepper" Color="Color.Primary" Variant="Variant.Filled"
                            Animation="true"
                            HeaderTextView="HeaderTextView.All" HeaderBadgeView="HeaderBadgeView.All"
                            ShowNextButton="false" ShowPreviousButton="false" ShowSkipButton="false">
            <ChildContent>
                <MudStepExtended Order="0" Icon="@Icons.Material.Filled.Edit" Title="Request">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudStack Spacing="2" Justify="Justify.Center">
                                    <MudPaper Outlined Class="pa-3">
                                        <MudTextM3 Align="Align.Center" Typo="TypoM3.Headline" Size="Size.Small">
                                            Password reset
                                        </MudTextM3>
                                    </MudPaper>
                                    <MudPaper Outlined Class="py-4 px-5">
                                        <MudStack Spacing="2">
                                            <MudTextM3 Align="Align.Center" Typo="TypoM3.Body" Size="Size.Medium">
                                                To reset your password, please enter your primary (main) email address. 
                                                We will the send letter with 6-digit code and 
                                                instruction what to do the next steps
                                            </MudTextM3>
                                            <MudForm
                                                @ref="_forgotPasswordForm"
                                                Model="_forgotPasswordModel"
                                                Validation="ForgotPasswordValidator.ValidateValue">
                                                <MudTextFieldExtended
                                                    Margin="Margin.Dense"
                                                    Label="Email" 
                                                    For="@(() => _forgotPasswordModel.Email)"
                                                    Variant="Variant.Outlined"
                                                    Immediate
                                                    @bind-Value="_forgotPasswordModel.Email"/>
                                            </MudForm>
                                            <MudLoadingButton
                                                Size="Size.Medium"
                                                Variant="Variant.Filled"
                                                Color="Color.Primary"
                                                ButtonType="ButtonType.Button"
                                                Disabled="@(string.IsNullOrEmpty(_forgotPasswordModel.Email))"
                                                OnClick="@(async () => await OnForgotPasswordAsync())">
                                                Send code
                                            </MudLoadingButton>
                                            <MudButton
                                                Size="Size.Medium"
                                                Variant="Variant.Text"
                                                Color="Color.Info"
                                                ButtonType="ButtonType.Button"
                                                Href="@ReturnUrl"
                                                OnClick="@(() => NavigationManager.NavigateTo(ReturnUrl))">
                                                Cancel
                                            </MudButton>
                                        </MudStack>
                                    </MudPaper>
                                </MudStack>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Order="1" Icon="@Icons.Material.Filled.ConfirmationNumber" Title="Confirmation">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudStack Spacing="1" Justify="Justify.Center">
                                    <MudPaper Outlined Class="pa-3">
                                        <MudTextM3 Align="Align.Center" Typo="TypoM3.Headline" Size="Size.Small">
                                            Confirm reset
                                        </MudTextM3>
                                    </MudPaper>
                                    <MudPaper Outlined Class="py-4 px-5">
                                        <MudStack Spacing="2">
                                            <MudTextM3 Align="Align.Center" Typo="TypoM3.Body" Size="Size.Medium">
                                                Enter the code we sent you to:
                                                <strong>@_forgotPasswordModel.Email</strong>
                                            </MudTextM3>
                                            <MudForm
                                                @ref="_verifyCodeForm"
                                                Model="_codeModel"
                                                Validation="VerifyCodeValidator.ValidateValue">
                                                <MudTextFieldExtended
                                                    @bind-Value="_codeModel.Code"
                                                    Variant="Variant.Outlined"
                                                    Margin="Margin.Dense"
                                                    Placeholder="XXXXXX"
                                                    Mask="_mask"
                                                    Clearable="true"
                                                    Immediate="true"/>
                                            </MudForm>
                                            <MudLoadingButton
                                                Size="Size.Medium"
                                                Variant="Variant.Filled"
                                                Color="Color.Primary"
                                                Disabled="@(_codeModel.Code.Length <= 5)"
                                                ButtonType="ButtonType.Button"
                                                OnClick="@(async () => await OnVerifyAsync())">
                                                Confirm
                                            </MudLoadingButton>
                                            <MudButton
                                                Size="Size.Medium"
                                                Variant="Variant.Text"
                                                Color="Color.Info"
                                                ButtonType="ButtonType.Button"
                                                Href="@ReturnUrl"
                                                OnClick="@(() => NavigationManager.NavigateTo(ReturnUrl))">
                                                Cancel
                                            </MudButton>
                                        </MudStack>
                                    </MudPaper>
                                    <CodeResend Context="_context"></CodeResend>
                                </MudStack>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
                <MudStepExtended Order="2" Icon="@Icons.Material.Filled.Save" Title="Reset">
                    <ChildContent>
                        <MudGrid Justify="Justify.Center">
                            <MudItem xs="8">
                                <MudStack Spacing="1" Justify="Justify.Center">
                                    <MudPaper Outlined Class="pa-3">
                                        <MudTextM3 Align="Align.Center" Typo="TypoM3.Headline" Size="Size.Small">
                                            New password
                                        </MudTextM3>
                                    </MudPaper>
                                    <MudPaper Outlined Class="py-4 px-5">
                                        <MudStack Spacing="2">
                                            <MudForm
                                                @ref="_resetPasswordForm"
                                                Model="_passwordResetModel"
                                                Validation="ConfirmResetPasswordValidator.ValidateValue">
                                                <MudPasswordField
                                                    Margin="Margin.Dense"
                                                    Label="New password"
                                                    Immediate="true"
                                                    PasswordMode="true"
                                                    IconSize="Size.Small"
                                                    For="@(() => _passwordResetModel.NewPassword)"
                                                    Variant="Variant.Outlined"
                                                    @bind-Value="_passwordResetModel.NewPassword"/>
                                                <MudPasswordField
                                                    Margin="Margin.Dense"
                                                    Label="Confirm new password"
                                                    Immediate="true"
                                                    PasswordMode="true"
                                                    IconSize="Size.Small"
                                                    For="@(() => _passwordResetModel.ConfirmNewPassword)"
                                                    Variant="Variant.Outlined"
                                                    @bind-Value="_passwordResetModel.ConfirmNewPassword"/>
                                            </MudForm>
                                            <MudLoadingButton
                                                Size="Size.Medium"
                                                Variant="Variant.Filled"
                                                Color="Color.Primary"
                                                ButtonType="ButtonType.Button"
                                                OnClick="@(async () => await OnReset())">
                                                Reset password
                                            </MudLoadingButton>
                                            <MudButton
                                                Size="Size.Medium"
                                                Variant="Variant.Text"
                                                Color="Color.Info"
                                                ButtonType="ButtonType.Button"
                                                Href="@ReturnUrl"
                                                OnClick="@(() => NavigationManager.NavigateTo(ReturnUrl))">
                                                Cancel
                                            </MudButton>
                                        </MudStack>
                                    </MudPaper>
                                </MudStack>
                            </MudItem>
                        </MudGrid>
                    </ChildContent>
                </MudStepExtended>
            </ChildContent>
        </MudStepperExtended>
    </MudItem>
</MudGrid>

@code {
    [SupplyParameterFromQuery(Name = "return_url")]
    public string ReturnUrl { get; set; } = null!;
    
    private readonly ForgotPasswordModel _forgotPasswordModel = new();
    private readonly CodeModel _codeModel = new();
    private readonly ResetPasswordModel _passwordResetModel = new();

    private readonly PatternMask _mask = new("000000");
    private MudStepperExtended _stepper = new();
    private MudForm _forgotPasswordForm = new();
    private MudForm _resetPasswordForm = new();
    private MudForm _verifyCodeForm = new();
    private MessageContext _context = new();

    private Guid _userId;

    private async Task SendCodeAsync()
    {
        var request = _context.ToSendCodeRequest();
        var response = await VerificationService.SendCodeAsync(request);
        Snackbar.Add(response.GetError().Description, response.Succeeded ? Severity.Success : Severity.Error);
    }

    private async Task OnForgotPasswordAsync()
    {
        await _forgotPasswordForm.Validate();

        if (_forgotPasswordForm.IsValid)
        {
            _context = new MessageContext()
            {
                UserId = _userId,
                Sender = SenderType.Email,
                Purpose = PurposeType.Password,
                Action = ActionType.Reset,
                Payload = new()
                {
                    { "To", _forgotPasswordModel.Email }
                }
            };
            
            var request = new ForgotPasswordRequest() { Email = _forgotPasswordModel.Email };
            var result = await PasswordService.ForgotPasswordAsync(request);

            if (result.Succeeded)
            {
                var response = result.Get()!;
                _userId = response.UserId;

                await SendCodeAsync();
                await _stepper.StepNextAsync();
            }
            else
            {
                Snackbar.Add(result.GetError().Description, Severity.Error);
            }
        }
    }

    private async Task OnVerifyAsync()
    {
        await _verifyCodeForm.Validate();

        if (_verifyCodeForm.IsValid)
        {
            var request = _context.ToVerifyCodeRequest(_codeModel.Code);
            var result = await VerificationService.VerifyCodeAsync(request);

            if (result.Succeeded)
            {
                await _stepper.StepNextAsync();
            }
            else
            {
                Snackbar.Add(result.GetError().Description, Severity.Error);
            }
        }
    }

    private async Task OnReset()
    {
        await _resetPasswordForm.Validate();

        if (_resetPasswordForm.IsValid)
        {
            var request = new ResetPasswordRequest()
            {
                NewPassword = _passwordResetModel.NewPassword,
                UserId = _userId
            };

            var result = await PasswordService.ResetPasswordAsync(request);

            if (result.Succeeded)
            {
                Snackbar.Add("Password was successfully reset.", Severity.Success);
                NavigationManager.NavigateTo(ReturnUrl);
            }

            Snackbar.Add(result.GetError().Description, Severity.Error);
        }
    }
}
