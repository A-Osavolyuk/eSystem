@page "/account/device/trust"
@using eSecurity.Client.Security.Authorization.Access.Verification
@using eSecurity.Client.Security.Authorization.Devices
@using eSecurity.Client.Security.Identity
@using eSecurity.Core.Common.DTOs
@using eSecurity.Core.Common.Responses

@inherits PageBase

@inject IUserService UserService
@inject IVerificationService VerificationService
@inject IDeviceService DeviceService

<Title Text="Device trust"></Title>

<MudGrid Spacing="1" Justify="Justify.Center">
    <MudItem xs="4">
        <MudStack Spacing="1">
            <MudPaper Outlined="true" Class="pa-3" Style="margin-top: 150px">
                <MudTextM3 Align="Align.Center" Typo="TypoM3.Headline" Size="Size.Small">
                    Device trust
                </MudTextM3>
            </MudPaper>
            <MudPaper Outlined="true" Class="px-5 py-4">
                <MudStack Spacing="2">
                    <MudTextM3 Align="Align.Center" Typo="TypoM3.Body" Size="Size.Medium">
                        You attempting to sign-in on new device.
                        To sign-in on new device, please enter 6-digit code the letter sent to:
                        <strong>@_email</strong>
                    </MudTextM3>
                    <MudForm @ref="_form" Model="Model">
                        <MudTextFieldExtended
                            @bind-Value="Model.Code"
                            Variant="Variant.Outlined"
                            Margin="Margin.Dense"
                            Placeholder="XXXXXX"
                            Mask="_mask"
                            Clearable="true"
                            Immediate="true"/>
                    </MudForm>
                    <MudLoadingButton
                        ButtonType="ButtonType.Button"
                        Variant="Variant.Filled"
                        Color="Color.Success"
                        Size="Size.Small"
                        Disabled="@(Model.Code.Length <= 5)"
                        OnClick="@(async () => await OnTrustAsync())">
                        Submit
                    </MudLoadingButton>
                </MudStack>
            </MudPaper>
            <CodeResend Context="_context"></CodeResend>
        </MudStack>
    </MudItem>
</MudGrid>

@code {

    [SupplyParameterFromQuery(Name = "device")]
    public Guid DeviceId { get; set; }

    [SupplyParameterFromQuery(Name = "user")]
    public Guid UserId { get; set; }
    
    public TrustDeviceModel Model { get; set; } = new();

    private MudForm _form = new();
    private PatternMask _mask = new("000000");

    private string? _email;
    private MessageContext? _context;
    private UserDeviceDto _device = new();

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var result = await UserService.GetUserDeviceAsync(UserId, DeviceId);

            if (result.Succeeded)
            {
                _device = result.Get()!;
                await LoadAsync();
                StateHasChanged();
            }
            else Snackbar.Add(result.GetError().Description, Severity.Error);
        }
    }

    private async Task LoadAsync()
    {
        var result = await UserService.GetUserPrimaryEmailAsync(UserId);

        if (result.Succeeded)
        {
            var response = result.Get()!;
            _email = response.Email;

            _context = new MessageContext()
            {
                UserId = UserId,
                Sender = SenderType.Email,
                Purpose = PurposeType.Device,
                Action = ActionType.Trust,
                Payload = new()
                {
                    { "To", _email! },
                    { "OS", _device.Os! },
                    { "Device", _device.Device! },
                    { "IpAddress", _device.IpAddress! },
                    { "Browser", _device.Browser! },
                }
            };

            await SendCodeAsync();
        }
        else Snackbar.Add(result.GetError().Description, Severity.Error);
    }

    private async Task SendCodeAsync()
    {
        var request = _context!.ToSendCodeRequest();
        var result = await VerificationService.SendCodeAsync(request);
        if (!result.Succeeded) Snackbar.Add(result.GetError().Description, Severity.Error);
    }

    private async Task OnTrustAsync()
    {
        await _form.Validate();

        if (_form.IsValid)
        {
            var request = _context!.ToVerifyCodeRequest(Model.Code);
            var result = await VerificationService.VerifyCodeAsync(request);

            if (result.Succeeded)
            {
                await TrustAsync();
            }

            else Snackbar.Add(result.GetError().Description, Severity.Error);
        }
    }

    private async Task TrustAsync()
    {
        var request = new TrustDeviceRequest()
        {
            UserId = UserId,
            DeviceId = DeviceId,
        };

        var result = await DeviceService.TrustAsync(request);

        if (result.Succeeded)
        {
            var response = result.Get()!;

            if (response!.IsTwoFactorEnabled)
            {
                Snackbar.Add("Device successfully trusted", Severity.Success);
                
                var builder = QueryBuilder.Create()
                    .WithUri(Links.Account.TwoFactorLoginPage)
                    .WithQueryParam("id", response.UserId.ToString());
                
                NavigationManager.NavigateTo(builder.Build());
            }
            else
            {
                UserState.UserId = response.UserId;
                AuthenticationManager.Authorize();
            }
        }
        else
        {
            Snackbar.Add(result.GetError().Description, Severity.Error);
        }
    }

}