@using eSecurity.Client.Security.Authentication.Password
@using eSecurity.Client.Security
@inject ISnackbar Snackbar
@inject IPasswordService PasswordService
@inject AddPasswordValidator Validator

<MudDialog Style="width: 600px">
    <TitleContent>
        Add password
    </TitleContent>
    <DialogContent>
        <MudForm 
            @ref="_addPasswordForm" 
            Model="Model" 
            Validation="Validator.ValidateValue">
            <MudPasswordField
                @bind-Value="Model.Password"
                For="() => Model.Password"
                Label="Password"
                Variant="Variant.Outlined"
                Immediate="true"
                Clearable="true"/>
            <MudPasswordField
                @bind-Value="Model.ConfirmPassword"
                For="() => Model.ConfirmPassword"
                Label="Confirm password"
                Variant="Variant.Outlined"
                Immediate="true"
                Clearable="true"/>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton
            Size="Size.Medium"
            Color="Color.Error"
            Variant="Variant.Outlined"
            ButtonType="ButtonType.Button"
            OnClick="@(() => OnCancel())">
            Cancel
        </MudButton>
        <MudButton
            Size="Size.Medium"
            Color="Color.Primary"
            Variant="Variant.Filled"
            ButtonType="ButtonType.Button"
            OnClick="@(async () => await OnSubmitAsync())">
            Submit
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] public IMudDialogInstance? Dialog { get; set; }
    [Parameter] public AddPasswordModel Model { get; set; } = new();

    private MudForm _addPasswordForm = new();

    private async Task OnSubmitAsync()
    {
        await _addPasswordForm.Validate();

        if (_addPasswordForm.IsValid)
        {
            var request = new AddPasswordRequest()
            {
                UserId = Model.UserId,
                Password = Model.Password
            };

            var result = await PasswordService.AddPasswordAsync(request);

            if (result.Succeeded)
            {
                Dialog?.Close(DialogResult.Ok(true));
            }
            else
            {
                Snackbar.Add(result.GetError().Description, Severity.Error);
            }
        }
    }
    
    private void OnCancel() => Dialog?.Close();
}